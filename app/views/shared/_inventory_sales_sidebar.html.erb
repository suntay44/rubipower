<!-- Inventory & Sales Sidebar -->
<div id="inventory-sales-sidebar" class="bg-yellow-600 text-white w-64 transition-all duration-300 ease-in-out fixed h-full hidden lg:block" style="z-index: 30;">
  <!-- Sidebar Header -->
  <div class="flex items-center justify-between p-5 border-b border-yellow-700">
    <div class="flex items-center space-x-3">
      <div class=" w-8 h-8 bg-white rounded-full flex items-center justify-center">
        <span class="text-yellow-600 font-bold text-sm">IS</span>
      </div>
      <span class="font-semibold text-md sidebar-text">Inventory & Sales</span>
    </div>
    <button id="inventory-sales-sidebar-toggle" class="text-white hover:text-yellow-200 transition-colors mr-4">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>
  </div>

  <!-- Navigation Menu -->
  <nav class="mt-4">
    <div class="px-4 space-y-2">
      <!-- Dashboard -->
      <a href="<%= inventory_sales_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-yellow-700' if request.path == inventory_sales_path %> text-white hover:bg-yellow-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
        </svg>
        <span class="sidebar-text">Dashboard</span>
      </a>

      <!-- Products -->
      <a href="<%= inventory_sales_products_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-yellow-700' if request.path.include?('products') %> text-white hover:bg-yellow-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
        <span class="sidebar-text">Products</span>
      </a>

      <!-- Sales -->
      <a href="<%= inventory_sales_sales_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-yellow-700' if request.path.include?('sales') %> text-white hover:bg-yellow-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
        </svg>
        <span class="sidebar-text">Sales</span>
      </a>

      <!-- Customers -->
      <a href="<%= inventory_sales_customers_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-yellow-700' if request.path.include?('customers') %> text-white hover:bg-yellow-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <span class="sidebar-text">Customers</span>
      </a>

      <!-- Orders -->
      <a href="<%= inventory_sales_orders_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-yellow-700' if request.path.include?('orders') %> text-white hover:bg-yellow-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span class="sidebar-text">Orders</span>
      </a>

      <!-- Reports -->
      <a href="<%= inventory_sales_reports_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-yellow-700' if request.path.include?('reports') %> text-white hover:bg-yellow-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <span class="sidebar-text">Reports</span>
      </a>

      <!-- HR & Payroll -->
      <div class="pt-4 border-t border-yellow-700">
        <a href="<%= hr_payroll_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg text-white hover:bg-yellow-700 transition-colors group">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="sidebar-text">HR & Payroll</span>
        </a>
      </div>

      <!-- Accounting -->
      <div class="pt-2">
        <a href="<%= root_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg text-white hover:bg-yellow-700 transition-colors group">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          <span class="sidebar-text">Accounting</span>
        </a>
      </div>

      <!-- Logout -->
      <div class="pt-2">
        <%= button_to destroy_user_session_path, method: :delete, 
            class: "flex items-center space-x-3 px-3 py-2 rounded-lg text-white hover:bg-yellow-700 transition-colors group w-full text-left" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          <span class="sidebar-text">Logout</span>
        <% end %>
      </div>
    </div>
  </nav>
</div>
