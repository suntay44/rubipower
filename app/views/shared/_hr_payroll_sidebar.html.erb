<!-- HR & Payroll Sidebar -->
<div id="hr-payroll-sidebar" class="bg-green-600 text-white w-64 transition-all duration-300 ease-in-out fixed h-full hidden lg:block" style="z-index: 30;">
  <!-- Sidebar Header -->
  <div class="flex items-center justify-between p-5 border-b border-green-700">
    <div class="flex items-center space-x-3">
      <div class=" w-8 h-8 bg-white rounded-full flex items-center justify-center">
        <span class="text-green-800 font-bold text-sm">HR</span>
      </div>
      <span class="font-semibold text-md sidebar-text">HR & Payroll</span>
    </div>
    <button id="hr-payroll-sidebar-toggle" class="text-white hover:text-green-200 transition-colors mr-4">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>
  </div>

  <!-- Navigation Menu -->
  <nav class="mt-4">
    <div class="px-4 space-y-2">
      <!-- Dashboard -->
      <a href="<%= hr_payroll_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-green-700' if request.path == hr_payroll_path %> text-white hover:bg-green-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
        </svg>
        <span class="sidebar-text">Dashboard</span>
      </a>

      <!-- Time Tracking -->
      <a href="<%= hr_payroll_time_tracking_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-green-700' if request.path.include?('time-tracking') %> text-white hover:bg-green-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="sidebar-text">Time Tracking</span>
      </a>

      <!-- Payslips -->
      <a href="<%= hr_payroll_payslips_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-green-700' if request.path.include?('payslips') %> text-white hover:bg-green-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span class="sidebar-text">Payslips</span>
      </a>

      <!-- Leaves -->
      <a href="<%= hr_payroll_leaves_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-green-700' if request.path.include?('leaves') %> text-white hover:bg-green-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span class="sidebar-text">Leaves</span>
      </a>

      <!-- Attendance -->
      <a href="<%= hr_payroll_attendance_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-green-700' if request.path.include?('attendance') %> text-white hover:bg-green-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
        </svg>
        <span class="sidebar-text">Attendance</span>
      </a>

      <!-- Employee Records -->
      <a href="<%= hr_payroll_employee_records_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-green-700' if request.path.include?('employee-records') %> text-white hover:bg-green-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span class="sidebar-text">Employee Records</span>
      </a>

      <!-- Payroll Reports -->
      <a href="<%= hr_payroll_payroll_reports_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-green-700' if request.path.include?('payroll-reports') %> text-white hover:bg-green-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <span class="sidebar-text">Payroll Reports</span>
      </a>

      <!-- User Management -->
      <a href="<%= hr_payroll_user_management_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg <%= 'bg-green-700' if request.path.include?('user-management') %> text-white hover:bg-green-600 transition-colors group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
        <span class="sidebar-text">User Management</span>
      </a>

      <!-- Inventory & Sales -->
      <div class="pt-4 border-t border-green-700">
        <a href="<%= inventory_sales_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg text-white hover:bg-green-700 transition-colors group">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
          <span class="sidebar-text">Inventory & Sales</span>
        </a>
      </div>

      <!-- Accounting -->
      <div class="pt-2">
        <a href="<%= root_path %>" class="flex items-center space-x-3 px-3 py-2 rounded-lg text-white hover:bg-green-700 transition-colors group">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          <span class="sidebar-text">Accounting</span>
        </a>
      </div>

      <!-- Logout -->
      <div class="pt-2">
        <%= button_to destroy_user_session_path, method: :delete, 
            class: "flex items-center space-x-3 px-3 py-2 rounded-lg text-white hover:bg-green-700 transition-colors group w-full text-left" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          <span class="sidebar-text">Logout</span>
        <% end %>
      </div>
    </div>
  </nav>
</div>
