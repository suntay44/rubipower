<!-- Main Content -->
    <!-- Top Navigation -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="flex items-center justify-between px-6 py-4">
        <div class="flex items-center space-x-4">
          <button id="mobile-sidebar-toggle" class="text-gray-500 hover:text-gray-700 lg:hidden">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          <div class="flex items-center space-x-3">
            <h1 class="text-2xl font-bold text-gray-900">Invoice Creation</h1>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <a href="<%= new_invoice_path %>" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors duration-200 flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>Create Invoice</span>
          </a>
        </div>
      </div>
    </header>

    <!-- Content -->
    <div class="p-6">
        <!-- Filters -->
        <%= form_with url: invoices_path, method: :get, local: true, class: "bg-white p-4 rounded-lg shadow mb-6" do |f| %>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <%= f.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :search, placeholder: "Invoice #, Client, Company...", value: params[:search], class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
            </div>
            <div class="flex items-end">
              <%= f.submit "Filter", class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 w-full" %>
            </div>
          </div>
        <% end %>

        <!-- Invoices Table -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Invoice #</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Invoice Date</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% if @invoices.any? %>
                  <% @invoices.each do |invoice| %>
                    <tr class="hover:bg-gray-50">
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        <%= invoice.invoice_number %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= case invoice.invoice_type
                          when 'partial' then 'bg-blue-100 text-blue-800'
                          when 'downpayment' then 'bg-yellow-100 text-yellow-800'
                          when 'fullpayment' then 'bg-green-100 text-green-800'
                          else 'bg-gray-100 text-gray-800'
                        end %>">
                          <%= invoice.invoice_type&.humanize || 'Unknown' %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <div>
                          <div class="font-medium"><%= invoice.client_name %></div>
                          <div class="text-gray-500"><%= invoice.client_company %></div>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= invoice.company_name %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        â‚±<%= number_with_precision(invoice.total_amount_due, precision: 2) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= invoice.invoice_date.strftime("%b %d, %Y") %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= invoice.due_date.strftime("%b %d, %Y") %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <%= invoice.created_at.strftime("%b %d, %Y") %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <a href="<%= invoice_path(invoice) %>" class="text-red-600 hover:text-red-900">
                          View Details
                        </a>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="9" class="px-6 py-8 text-center text-sm text-gray-500">
                      No invoices found. <a href="<%= new_invoice_path %>" class="text-red-600 hover:text-red-900">Create your first invoice</a>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
