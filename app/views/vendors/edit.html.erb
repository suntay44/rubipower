<div class="min-h-screen bg-gray-50">
  <!-- Flash Messages -->
  <% if alert %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 mx-4 mt-4">
      <%= alert %>
    </div>
  <% end %>

  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Edit Vendor</h1>
            <p class="mt-1 text-sm text-gray-500">Update vendor information</p>
          </div>
          <div class="flex space-x-3">
            <%= link_to inventory_sales_vendor_path(@vendor), class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors" do %>
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Back to Vendor
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Vendor Information</h3>
        <p class="text-sm text-gray-500">Editing: <%= @vendor.name %></p>
      </div>
      
      <%= form_with model: @vendor, url: update_inventory_sales_vendor_path(@vendor), method: :patch, local: true, class: "p-6 space-y-6" do |form| %>
        <% if @vendor.errors.any? %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            <h4 class="font-medium">Please fix the following errors:</h4>
            <ul class="list-disc list-inside mt-2">
              <% @vendor.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="grid grid-cols-1 gap-6">
          <!-- Name -->
          <div>
            <%= form.label :name, "Vendor Name", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500", placeholder: "Enter vendor name" %>
          </div>

          <!-- Address -->
          <div>
            <%= form.label :address, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :address, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500", placeholder: "Enter vendor address" %>
          </div>

          <!-- TIN 2303 -->
          <div>
            <%= form.label :tin, "TIN 2303", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :tin, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500", placeholder: "Enter TIN number" %>
          </div>

          <!-- Bank Details -->
          <div>
            <%= form.label :bank_details, "Bank Details", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :bank_details, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500", placeholder: "Enter bank details" %>
          </div>

          <!-- Attachments Section -->
          <div class="border-t border-gray-200 pt-4">
            <h4 class="text-md font-semibold text-gray-900 mb-4">Vendor Documents</h4>
            
            <!-- Tax Certificate (2303) -->
            <div class="mb-4">
              <%= form.label :tax_certificate, "Tax Certificate (2303)", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <% if @vendor.tax_certificate.attached? %>
                <div class="mt-2 mb-3 p-3 bg-gray-50 border border-gray-200 rounded-md">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                      <span class="text-sm text-gray-700"><%= @vendor.tax_certificate.filename %></span>
                    </div>
                    <%= link_to rails_blob_path(@vendor.tax_certificate), target: "_blank", class: "text-blue-600 hover:text-blue-800 text-sm mr-2" do %>
                      View
                    <% end %>
                  </div>
                </div>
              <% end %>
              <%= form.file_field :tax_certificate, accept: ".pdf,.jpg,.jpeg,.png", class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100" %>
              <p class="mt-1 text-xs text-gray-500">Upload vendor's 2303 tax certificate</p>
            </div>

            <!-- Sales Invoice -->
            <div class="mb-4">
              <%= form.label :sales_invoice, "Sample Sales Invoice", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <% if @vendor.sales_invoice.attached? %>
                <div class="mt-2 mb-3 p-3 bg-gray-50 border border-gray-200 rounded-md">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                      <span class="text-sm text-gray-700"><%= @vendor.sales_invoice.filename %></span>
                    </div>
                    <%= link_to rails_blob_path(@vendor.sales_invoice), target: "_blank", class: "text-blue-600 hover:text-blue-800 text-sm mr-2" do %>
                      View
                    <% end %>
                  </div>
                </div>
              <% end %>
              <%= form.file_field :sales_invoice, accept: ".pdf,.jpg,.jpeg,.png", class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100" %>
              <p class="mt-1 text-xs text-gray-500">Upload a sample sales invoice from vendor</p>
            </div>

            <!-- Vendor Quotation -->
            <div class="mb-4">
              <%= form.label :vendor_quotation, "Vendor Quotation", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <% if @vendor.vendor_quotation.attached? %>
                <div class="mt-2 mb-3 p-3 bg-gray-50 border border-gray-200 rounded-md">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                      <span class="text-sm text-gray-700"><%= @vendor.vendor_quotation.filename %></span>
                    </div>
                    <%= link_to rails_blob_path(@vendor.vendor_quotation), target: "_blank", class: "text-blue-600 hover:text-blue-800 text-sm mr-2" do %>
                      View
                    <% end %>
                  </div>
                </div>
              <% end %>
              <%= form.file_field :vendor_quotation, accept: ".pdf,.jpg,.jpeg,.png", class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100" %>
              <p class="mt-1 text-xs text-gray-500">Upload vendor quotation document</p>
            </div>

            <!-- Sample Sales Invoice (legacy) -->
            <div class="mb-4">
              <%= form.label :sample_sales_invoice, "Additional Sample Sales Invoice", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <% if @vendor.sample_sales_invoice.attached? %>
                <div class="mt-2 mb-3 p-3 bg-gray-50 border border-gray-200 rounded-md">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                      <span class="text-sm text-gray-700"><%= @vendor.sample_sales_invoice.filename %></span>
                    </div>
                    <%= link_to delete_vendor_sample_sales_invoice_path(@vendor), method: :delete, data: { confirm: "Are you sure you want to delete this file?" }, class: "text-red-600 hover:text-red-800 text-sm" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
              <%= form.file_field :sample_sales_invoice, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100" %>
              <p class="mt-1 text-xs text-gray-500">Upload additional sample sales invoice (optional)</p>
            </div>
          </div>

          <!-- Status -->
          <div>
            <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :status, options_for_select([['Active', 'active'], ['Inactive', 'inactive']], @vendor.status), 
                {}, 
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500" } %>
          </div>
        </div>

        <!-- Submit Buttons -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to inventory_sales_vendor_path(@vendor), class: "bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition-colors" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Vendor", class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

