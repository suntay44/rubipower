<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="flex items-center justify-between px-6 py-4">
    <div class="flex items-center space-x-4">
      <a href="<%= expense_revenues_path %>" class="text-gray-500 hover:text-gray-700">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </a>
      <div class="flex items-center space-x-3">
        <h1 class="text-2xl font-bold text-gray-900">Expense/Revenue Entry #<%= @expense_revenue.id %></h1>
      </div>
    </div>
    
    <div class="flex items-center space-x-4">
      <a href="<%= edit_expense_revenue_path(@expense_revenue) %>" class="bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 transition-colors duration-200 flex items-center space-x-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        <span>Edit</span>
      </a>
    </div>
  </div>
</header>

<main class="flex-1 overflow-y-auto">
  <div class="p-6">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Expense Details -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Expense Details</h2>
          </div>
          <div class="p-6 space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700">Expense Date</label>
                <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.expense_date.strftime("%B %d, %Y") %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Receipt Date</label>
                <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.receipt_date.strftime("%B %d, %Y") %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Vendor Name</label>
                <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.vendor_name %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Category</label>
                <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.category.humanize %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Amount</label>
                <p class="mt-1 text-sm text-gray-900">₱<%= number_with_precision(@expense_revenue.total_amount, precision: 2) %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Sales Order Number</label>
                <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.sales_order_number %></p>
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700">Purpose</label>
              <p class="mt-1 text-sm text-gray-900 whitespace-pre-line"><%= @expense_revenue.purpose %></p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700">Vendor Address</label>
              <p class="mt-1 text-sm text-gray-900 whitespace-pre-line"><%= @expense_revenue.vendor_address %></p>
            </div>
          </div>
        </div>

        <!-- System Information -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">System Information</h2>
          </div>
          <div class="p-6 space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700">PO Number</label>
                <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.po_number.present? ? @expense_revenue.po_number : "N/A" %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">RFP Number</label>
                <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.rfp_number.present? ? @expense_revenue.rfp_number : "N/A" %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Bank Reference</label>
                <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.bank_reference.present? ? @expense_revenue.bank_reference : "N/A" %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Client Name</label>
                <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.client_name %></p>
              </div>
              <% if @expense_revenue.quantity.present? && @expense_revenue.unit_price.present? %>
                <div>
                  <label class="block text-sm font-medium text-gray-700">Quantity</label>
                  <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.quantity %></p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700">Unit Price</label>
                  <p class="mt-1 text-sm text-gray-900">₱<%= number_with_precision(@expense_revenue.unit_price, precision: 2) %></p>
                </div>
              <% end %>
            </div>
            
            <% if @expense_revenue.vendor_tin.present? %>
              <div>
                <label class="block text-sm font-medium text-gray-700">Vendor TIN</label>
                <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.vendor_tin %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Attachments -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Receipts</h2>
          </div>
          <div class="p-6">
            <% if @expense_revenue.receipts.attached? %>
              <div class="space-y-3">
                <% @expense_revenue.receipts.each do |receipt| %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div class="flex items-center space-x-3">
                      <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                      <div>
                        <p class="text-sm font-medium text-gray-900"><%= receipt.filename %></p>
                        <p class="text-xs text-gray-500"><%= number_to_human_size(receipt.byte_size) %></p>
                      </div>
                    </div>
                    <a href="<%= rails_blob_path(receipt, disposition: "attachment") %>" class="text-red-600 hover:text-red-800 text-sm font-medium">
                      Download
                    </a>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-sm text-gray-500">No receipts attached</p>
            <% end %>
          </div>
        </div>

        <!-- Supporting Documents -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Supporting Documents</h2>
          </div>
          <div class="p-6">
            <% if @expense_revenue.supporting_documents.attached? %>
              <div class="space-y-3">
                <% @expense_revenue.supporting_documents.each do |document| %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div class="flex items-center space-x-3">
                      <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                      <div>
                        <p class="text-sm font-medium text-gray-900"><%= document.filename %></p>
                        <p class="text-xs text-gray-500"><%= number_to_human_size(document.byte_size) %></p>
                      </div>
                    </div>
                    <a href="<%= rails_blob_path(document, disposition: "attachment") %>" class="text-red-600 hover:text-red-800 text-sm font-medium">
                      Download
                    </a>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-sm text-gray-500">No supporting documents attached</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Status -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Status</h3>
          </div>
          <div class="p-6 space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700">Supervisor Status</label>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                <%= case @expense_revenue.supervisor_status
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    when 'approved' then 'bg-green-100 text-green-800'
                    when 'rejected' then 'bg-red-100 text-red-800'
                    end %>">
                <%= @expense_revenue.supervisor_status.humanize %>
              </span>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Finance Status</label>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                <%= case @expense_revenue.finance_status
                    when 'finance_pending' then 'bg-blue-100 text-blue-800'
                    when 'finance_approved' then 'bg-green-100 text-green-800'
                    when 'finance_rejected' then 'bg-red-100 text-red-800'
                    end %>">
                <%= @expense_revenue.finance_status.humanize %>
              </span>
            </div>
            <% if @expense_revenue.verified_at.present? %>
              <div>
                <label class="block text-sm font-medium text-gray-700">Verified At</label>
                <p class="mt-1 text-sm text-gray-900"><%= @expense_revenue.verified_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Actions -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Actions</h3>
          </div>
          <div class="p-6 space-y-3">
            <% if @expense_revenue.supervisor_status == 'pending' %>
              <%= button_to approve_supervisor_expense_revenue_path(@expense_revenue), method: :patch, 
                  class: "w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors duration-200" do %>
                Approve
              <% end %>
              <%= button_to reject_supervisor_expense_revenue_path(@expense_revenue), method: :patch, 
                  class: "w-full bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors duration-200" do %>
                Reject
              <% end %>
            <% elsif @expense_revenue.supervisor_status == 'approved' && @expense_revenue.finance_status == 'finance_pending' %>
              <%= button_to approve_finance_expense_revenue_path(@expense_revenue), method: :patch, 
                  class: "w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors duration-200" do %>
                Approve Finance
              <% end %>
              <%= button_to reject_finance_expense_revenue_path(@expense_revenue), method: :patch, 
                  class: "w-full bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors duration-200" do %>
                Reject Finance
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Summary -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Summary</h3>
          </div>
          <div class="p-6 space-y-3">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Total Amount:</span>
              <span class="text-sm font-medium text-gray-900">₱<%= number_with_precision(@expense_revenue.total_amount, precision: 2) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Category:</span>
              <span class="text-sm font-medium text-gray-900"><%= @expense_revenue.category.humanize %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Created:</span>
              <span class="text-sm font-medium text-gray-900"><%= @expense_revenue.created_at.strftime("%B %d, %Y") %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

