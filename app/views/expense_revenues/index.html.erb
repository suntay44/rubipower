<!-- Main Content -->
    <!-- Top Navigation -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="flex items-center justify-between px-6 py-4">
        <div class="flex items-center space-x-4">
          <button id="mobile-sidebar-toggle" class="text-gray-500 hover:text-gray-700 lg:hidden">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          <div class="flex items-center space-x-3">
            <h1 class="text-2xl font-bold text-gray-900">Expense/Revenue Encoding</h1>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <a href="<%= new_expense_revenue_path %>" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors duration-200 flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>Expense/Revenue Entry</span>
          </a>
        </div>
      </div>
    </header>

    <!-- Content -->
    <div class="p-6">
      <!-- Filters -->
      <%= form_with url: expense_revenues_path, method: :get, local: true, class: "bg-white p-4 rounded-lg shadow mb-6" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div>
            <%= f.label :supervisor_status, "Supervisor Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :supervisor_status, options_for_select([
              ['All', ''],
              ['Pending', 'pending'],
              ['Approved', 'approved'],
              ['Rejected', 'rejected']
            ], params[:supervisor_status]), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
          <div>
            <%= f.label :finance_status, "Finance Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :finance_status, options_for_select([
              ['All', ''],
              ['Pending', 'finance_pending'],
              ['Approved', 'finance_approved'],
              ['Rejected', 'finance_rejected']
            ], params[:finance_status]), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
          <div>
            <%= f.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :search, placeholder: "Vendor, Order #, Client, Purpose...", value: params[:search], class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
          <div class="flex items-end">
            <%= f.submit "Filter", class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 w-full" %>
          </div>
        </div>
      <% end %>

      <!-- Table -->
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Entry ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vendor</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sales Order</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Expense Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @expense_revenues.any? %>
              <% @expense_revenues.each do |expense| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    #<%= expense.id %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <div>
                      <div class="font-medium"><%= expense.vendor_name %></div>
                      <div class="text-gray-500 text-xs"><%= truncate(expense.vendor_address, length: 30) %></div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= expense.sales_order_number %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= expense.category&.humanize || 'N/A' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= expense.client_name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    â‚±<%= number_with_precision(expense.total_amount, precision: 2) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= expense.expense_date.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex flex-col space-y-1">
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                        <%= case expense.supervisor_status
                            when 'pending' then 'bg-yellow-100 text-yellow-800'
                            when 'approved' then 'bg-green-100 text-green-800'
                            when 'rejected' then 'bg-red-100 text-red-800'
                            else 'bg-gray-100 text-gray-800'
                            end %>">
                        Supervisor: <%= expense.supervisor_status&.humanize || 'Unknown' %>
                      </span>
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                        <%= case expense.finance_status
                            when 'finance_pending' then 'bg-yellow-100 text-yellow-800'
                            when 'finance_approved' then 'bg-green-100 text-green-800'
                            when 'finance_rejected' then 'bg-red-100 text-red-800'
                            else 'bg-gray-100 text-gray-800'
                            end %>">
                        Finance: <%= expense.finance_status&.humanize || 'Unknown' %>
                      </span>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= expense.created_at.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <a href="<%= expense_revenue_path(expense) %>" class="text-red-600 hover:text-red-900">
                      View Details
                    </a>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="10" class="px-6 py-8 text-center text-sm text-gray-500">
                  No expense/revenue entries found. <%= link_to "Create one", new_expense_revenue_path, class: "text-red-600 hover:text-red-800" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
