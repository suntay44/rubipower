<% content_for :title, "Edit Material" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div class="flex items-center space-x-4">
          <button id="mobile-sidebar-toggle" class="text-gray-500 hover:text-gray-700 lg:hidden">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Edit Material</h1>
            <p class="mt-2 text-gray-600">Update material information</p>
          </div>
        </div>
        <div class="flex space-x-3">
          <%= link_to inventory_sales_materials_path, class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors" do %>
            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Materials
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Content -->
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <%= form_with model: @material, url: update_inventory_sales_material_path(@material), method: :patch, local: true, class: "space-y-8" do |form| %>
        <% if @material.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  There were <%= pluralize(@material.errors.count, "error") %> with your submission:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% @material.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Basic Information Section -->
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
            </svg>
            Material Information
          </h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Material Name -->
            <div class="md:col-span-2">
              <%= form.label :name, "Material Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :name, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent", 
                  placeholder: "Enter material name" %>
            </div>

            <!-- Vendor -->
            <div>
              <%= form.label :vendor_id, "Vendor", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :vendor_id, 
                  options_for_select([['Select a vendor', '']] + @vendors.map { |v| [v.name, v.id] }, @material.vendor_id),
                  {},
                  { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent" } %>
              <p class="text-xs text-gray-500 mt-1">
                <%= link_to "Add new vendor", new_inventory_sales_vendor_path, class: "text-yellow-600 hover:text-yellow-700", target: "_blank" %>
              </p>
            </div>

            <!-- Unit -->
            <div>
              <%= form.label :unit, "Unit of Measurement", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :unit, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent", 
                  placeholder: "e.g., kg, pcs, meters" %>
            </div>

            <!-- Status -->
            <div>
              <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :status, 
                  options_for_select([
                    ['Active', 'active'],
                    ['Inactive', 'inactive']
                  ], @material.status),
                  {},
                  { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent" } %>
            </div>
          </div>
        </div>

        <!-- Description Section -->
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Material Description
          </h3>
          
          <div>
            <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description, 
                rows: 4,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent", 
                placeholder: "Enter material description..." %>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", inventory_sales_materials_path, 
              class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors" %>
          <%= form.submit "Update Material", 
              class: "px-6 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

