<div class="p-6">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Payroll Reports</h1>
    <p class="text-gray-600 mt-2">Generate and view payroll reports and analytics</p>
  </div>

  <!-- Report Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 bg-green-100 rounded-lg">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Payroll</p>
          <p class="text-2xl font-semibold text-gray-900">$<%= number_with_precision(@total_payroll || 0, precision: 0) %></p>
          <p class="text-xs text-gray-500">This month</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 bg-blue-100 rounded-lg">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Employees Paid</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @employees_paid || 0 %></p>
          <p class="text-xs text-gray-500">This month</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 bg-yellow-100 rounded-lg">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Average Salary</p>
          <p class="text-2xl font-semibold text-gray-900">$<%= number_with_precision(@average_salary || 0, precision: 0) %></p>
          <p class="text-xs text-gray-500">Per employee</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 bg-purple-100 rounded-lg">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Growth Rate</p>
          <p class="text-2xl font-semibold text-gray-900">+5.2%</p>
          <p class="text-xs text-gray-500">vs last month</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Report Generation -->
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Generate Reports</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="border border-gray-200 rounded-lg p-4">
        <h3 class="text-lg font-medium text-gray-900 mb-2">Monthly Payroll</h3>
        <p class="text-sm text-gray-600 mb-4">Generate monthly payroll summary report</p>
        <div class="space-y-2 mb-4">
          <select class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500">
            <option>January 2024</option>
            <option>December 2023</option>
            <option>November 2023</option>
          </select>
        </div>
        <button class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
          Generate Report
        </button>
      </div>

      <div class="border border-gray-200 rounded-lg p-4">
        <h3 class="text-lg font-medium text-gray-900 mb-2">Department Summary</h3>
        <p class="text-sm text-gray-600 mb-4">Generate payroll summary by department</p>
        <div class="space-y-2 mb-4">
          <select class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500">
            <option>All Departments</option>
            <option>IT</option>
            <option>HR</option>
            <option>Finance</option>
            <option>Operations</option>
          </select>
        </div>
        <button class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
          Generate Report
        </button>
      </div>

      <div class="border border-gray-200 rounded-lg p-4">
        <h3 class="text-lg font-medium text-gray-900 mb-2">Tax Report</h3>
        <p class="text-sm text-gray-600 mb-4">Generate tax deduction report</p>
        <div class="space-y-2 mb-4">
          <select class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500">
            <option>Q1 2024</option>
            <option>Q4 2023</option>
            <option>Q3 2023</option>
          </select>
        </div>
        <button class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
          Generate Report
        </button>
      </div>
    </div>
  </div>

  <!-- Recent Reports -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Recent Reports</h2>
    </div>
    <div class="divide-y divide-gray-200">
      <% if @recent_reports.any? %>
        <% @recent_reports.each do |report| %>
          <div class="p-6 hover:bg-gray-50 transition-colors">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="p-3 bg-green-100 rounded-lg">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-gray-900">Payslip - <%= report.user.full_name %></h3>
                  <p class="text-sm text-gray-500">Generated on <%= report.created_at.strftime("%B %d, %Y") %></p>
                  <p class="text-sm text-gray-500">Net Pay: $<%= number_with_precision(report.net_pay, precision: 2) %></p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <button class="text-green-600 hover:text-green-700 font-medium">
                  View
                </button>
                <button class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
                  Download
                </button>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="p-6">
          <div class="text-center">
            <p class="text-gray-500">No recent reports found</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
