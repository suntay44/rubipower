<div class="min-h-screen bg-gray-50">
  <!-- Flash Messages -->
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 mx-4 mt-4">
      <%= notice %>
    </div>
  <% end %>

  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Sales</h1>
            <p class="mt-1 text-sm text-gray-500">Manage your sales transactions</p>
          </div>
          <div class="flex space-x-3">
            <%= link_to inventory_sales_path, class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors" do %>
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Back to Dashboard
            <% end %>
            <%= link_to new_inventory_sales_sale_path, class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors flex items-center space-x-2" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              <span>New Sale</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Search and Filter -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white shadow rounded-lg p-4 mb-6">
      <%= form_with url: inventory_sales_sales_path, method: :get, local: true, class: "flex gap-4 items-end" do |form| %>
        <div class="flex-1">
          <%= form.label :search, "Search Sales", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :search, value: params[:search], placeholder: "Search by project name, client name, or description...", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>
        <div>
          <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :status, options_for_select([['All', ''], ['Pending', 'pending'], ['Paid', 'paid'], ['Failed', 'failed'], ['Refunded', 'refunded']], params[:status]), {}, class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>
        <div>
          <%= form.label :year, "Year", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :year, options_for_select([['All', '']] + (Date.current.year - 5..Date.current.year + 1).to_a.reverse.map { |y| [y, y] }, params[:year]), {}, class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>
        <div>
          <%= form.submit "Filter", class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors" %>
        </div>
        <% if params[:search].present? || params[:status].present? || params[:year].present? %>
          <%= link_to "Clear", inventory_sales_sales_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition-colors" %>
        <% end %>
      <% end %>
    </div>

    <!-- Sales Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Project Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Items</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @sales.any? %>
            <% @sales.each do |sale| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= sale.project_name %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= sale.client_name %></div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900"><%= truncate(sale.description, length: 50) %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= sale.total_items %> items</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-semibold text-gray-900">â‚±<%= number_with_delimiter(sale.total_amount) %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= sale.payment_status_color == 'green' ? 'bg-green-100 text-green-800' : sale.payment_status_color == 'yellow' ? 'bg-yellow-100 text-yellow-800' : sale.payment_status_color == 'red' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= sale.payment_status&.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-500"><%= sale.sale_date.strftime("%b %d, %Y") %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                  <%= link_to inventory_sales_sale_path(sale), class: "text-blue-600 hover:text-blue-900" do %>
                    View
                  <% end %>
                  <%= link_to edit_inventory_sales_sale_path(sale), class: "text-yellow-600 hover:text-yellow-900" do %>
                    Edit
                  <% end %>
                  <%= link_to destroy_inventory_sales_sale_path(sale), method: :delete, data: { confirm: "Are you sure you want to delete this sale?" }, class: "text-red-600 hover:text-red-900" do %>
                    Delete
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="8" class="px-6 py-4 text-center text-gray-500">
                No sales found. <%= link_to "Create your first sale", new_inventory_sales_sale_path, class: "text-green-600 hover:text-green-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @sales.respond_to?(:total_pages) && @sales.total_pages > 1 %>
      <div class="mt-6">
        <%= paginate @sales %>
      </div>
    <% end %>
  </div>
</div>

