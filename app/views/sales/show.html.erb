<div class="min-h-screen bg-gray-50">
  <!-- Flash Messages -->
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 mx-4 mt-4">
      <%= notice %>
    </div>
  <% end %>

  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Sale #<%= @sale.id %></h1>
            <p class="mt-1 text-sm text-gray-500">Project: <%= @sale.project_name %></p>
          </div>
          <div class="flex space-x-3">
            <%= link_to inventory_sales_sales_path, class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors" do %>
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Back to Sales
            <% end %>
            <%= link_to edit_inventory_sales_sale_path(@sale), class: "bg-yellow-600 text-white px-4 py-2 rounded-lg hover:bg-yellow-700 transition-colors" do %>
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Sale Information -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Sale Information</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Project Name</label>
              <p class="text-sm text-gray-900 font-semibold"><%= @sale.project_name %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Client Name</label>
              <p class="text-sm text-gray-900"><%= @sale.client_name %></p>
            </div>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
              <p class="text-sm text-gray-900 whitespace-pre-line"><%= @sale.description %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Sale Date</label>
              <p class="text-sm text-gray-900"><%= @sale.sale_date.strftime("%B %d, %Y") %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Sale Number</label>
              <p class="text-sm text-gray-900"><%= @sale.sale_number %></p>
            </div>
          </div>
        </div>

        <!-- Items List -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Items List</h3>
          <% if @sale.sale_items.any? %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200 border border-gray-300 rounded-md">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Product</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Quantity</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Unit Price</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Total</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @sale.sale_items.each do |item| %>
                    <tr>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= item.product.name %></td>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= item.quantity %></td>
                      <td class="px-4 py-3 text-sm text-gray-900">₱<%= number_with_precision(item.unit_price, precision: 2) %></td>
                      <td class="px-4 py-3 text-sm font-medium text-gray-900">₱<%= number_with_precision(item.total_price, precision: 2) %></td>
                    </tr>
                  <% end %>
                </tbody>
                <tfoot class="bg-gray-50">
                  <tr>
                    <td colspan="3" class="px-4 py-3 text-right text-sm font-semibold text-gray-900">Total Amount:</td>
                    <td class="px-4 py-3 text-sm font-bold text-gray-900">₱<%= number_with_precision(@sale.total_amount, precision: 2) %></td>
                  </tr>
                </tfoot>
              </table>
            </div>
          <% else %>
            <p class="text-sm text-gray-500 italic">No items found</p>
          <% end %>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Status Card -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Status</h3>
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700">Payment Status</span>
              <span class="px-2 py-1 text-xs font-semibold rounded-full <%= @sale.payment_status_color == 'green' ? 'bg-green-100 text-green-800' : @sale.payment_status_color == 'yellow' ? 'bg-yellow-100 text-yellow-800' : @sale.payment_status_color == 'red' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                <%= @sale.payment_status&.titleize %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700">Payment Method</span>
              <span class="text-sm text-gray-900"><%= @sale.payment_method&.humanize || 'N/A' %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700">Total Items</span>
              <span class="text-sm text-gray-900"><%= @sale.total_items %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700">Created</span>
              <span class="text-sm text-gray-900"><%= @sale.created_at.strftime("%m/%d/%Y") %></span>
            </div>
          </div>
        </div>

        <!-- Notes -->
        <% if @sale.notes.present? %>
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Notes</h3>
            <p class="text-sm text-gray-700 whitespace-pre-line"><%= @sale.notes %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

