<div class="bg-white rounded-lg shadow-sm overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900"><%= title %></h3>
    <p class="text-sm text-gray-600"><%= description %></p>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Request ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requester</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Items</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Cost</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if requests.any? %>
          <% requests.each do |request| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                #<%= request.id %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= request.requester_user&.email || 'Unknown' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                  <%= case request.priority_level
                      when 'urgent' then 'bg-red-100 text-red-800'
                      when 'high' then 'bg-orange-100 text-orange-800'
                      when 'medium' then 'bg-yellow-100 text-yellow-800'
                      when 'low' then 'bg-green-100 text-green-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= request.priority_level&.humanize || 'Not Set' %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= request.items.count %> item<%= 's' if request.items.count != 1 %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                $<%= number_with_precision(request.items.sum(:cost), precision: 2) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex flex-col space-y-1">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                    <%= request.budget_approve? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    Budget: <%= request.budget_approve? ? 'Approved' : 'Pending' %>
                  </span>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                    <%= request.procurement_approve? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    Procurement: <%= request.procurement_approve? ? 'Approved' : 'Pending' %>
                  </span>
                  <% if request.purchase_order.present? %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                    <%= case request.purchase_order.status
                        when 'draft' then 'bg-gray-100 text-gray-800'
                        when 'approved' then 'bg-green-100 text-green-800'
                        when 'sent' then 'bg-blue-100 text-blue-800'
                        when 'goods_received' then 'bg-yellow-100 text-yellow-800'
                        when 'invoice_matched' then 'bg-yellow-100 text-yellow-800'
                        when 'payment_processed' then 'bg-purple-100 text-purple-800'
                        when 'cancelled' then 'bg-red-100 text-red-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    P.O.: <%= request.purchase_order.status&.humanize || 'Unknown' %>
                  </span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= request.created_at.strftime("%b %d, %Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <a href="<%= purchase_request_detail_path(request) %>" class="text-red-600 hover:text-red-900">
                  View Details
                </a>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="px-6 py-8 text-center text-sm text-gray-500">
              No requests in this category
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
