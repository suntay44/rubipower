<!-- Main Content -->
    <!-- Top Navigation -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="flex items-center justify-between px-6 py-4">
        <div class="flex items-center space-x-4">
          <button id="mobile-sidebar-toggle" class="text-gray-500 hover:text-gray-700 lg:hidden">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          <div class="flex items-center space-x-3">
            <a href="<%= purchase_request_path %>" class="text-gray-500 hover:text-gray-700">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
            </a>
            <h1 class="text-2xl font-bold text-gray-900">Create Purchase Request</h1>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <!-- User Profile -->
          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-red-600 rounded-full flex items-center justify-center">
              <span class="text-white font-semibold text-sm">A</span>
            </div>
            <div class="hidden md:block">
              <p class="text-sm font-medium text-gray-900">Admin User</p>
              <p class="text-xs text-gray-500">admin@example.com</p>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content Area -->
    <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
      <div class="max-w-4xl mx-auto">
        <!-- MRS Selection Form (outside main form to prevent nested forms) -->
        <div class="mb-6 p-4 bg-yellow-50 border border-yellow-200 rounded-md">
          <h4 class="text-sm font-medium text-yellow-900 mb-3">Select Material Requisition Slip (Optional)</h4>
          <p class="text-sm text-yellow-800 mb-3">You can select an approved Material Requisition Slip to pre-populate this form, or fill it out manually.</p>
          <%= form_with url: new_purchase_request_path, method: :get, local: true, id: "mrs-selection-form", class: "flex items-end gap-3" do |f| %>
            <div class="flex-1">
              <%= f.label :mrs_id, "Select MRS", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.select :mrs_id, 
                  options_for_select([['-- Select MRS to pre-populate --', '']] + (@approved_mrs_list || []).map { |mrs| ["MRS-#{mrs.id.to_s.rjust(4, '0')} - #{mrs.requester_user.email} (#{mrs.items_exclusive.count} items)", mrs.id] }, params[:mrs_id]),
                  {},
                  { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500", onchange: "document.getElementById('mrs-selection-form').submit();" } %>
            </div>
            <% if params[:mrs_id].present? %>
              <%= link_to "Clear Selection", new_purchase_request_path, class: "px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 text-sm" %>
            <% end %>
          <% end %>
        </div>

        <!-- Purchase Request Form -->
        <%= form_with model: @purchase_request, url: create_purchase_request_path, local: true, class: "bg-white rounded-lg shadow-sm p-6" do |form| %>
          <!-- Error Messages -->
          <% if @purchase_request.errors.any? %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mb-6">
              <h4 class="font-medium">Please fix the following errors:</h4>
              <ul class="list-disc list-inside mt-2">
                <% @purchase_request.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Required Fields Note -->
          <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-md">
            <p class="text-sm text-blue-800">
              <span class="font-medium">Note:</span> Fields marked with <span class="text-red-600 font-bold">*</span> are required and must be filled out.
            </p>
          </div>

          <!-- Basic Information Section -->
          <div class="mb-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Basic Information
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= form.label :request_date, "Request Date *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.date_field :request_date, value: Date.current, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true %>
              </div>
              
              <div>
                <%= form.label :priority_level, "Priority Level *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.select :priority_level, options_for_select(@priority_levels.map { |p| [p, p.downcase] }, @purchase_request.priority_level), { prompt: "Select Priority" }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true } %>
              </div>
            </div>
          </div>

          <!-- MRS Item List Display (always show, but only display items if MRS is loaded) -->
          <div class="mb-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              <% if @mrs.present? %>
                Material Requisition Sheet (MRS-<%= @mrs.id.to_s.rjust(4, '0') %>) - Item List
              <% else %>
                Material Requisition Sheet - Item List
              <% end %>
            </h3>
            <% if @mrs.present? && @purchase_request.items.any? %>
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 border border-gray-300 rounded-md">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Item Name</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Description</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Vendor</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Quantity</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Quoted Price</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Total</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% @purchase_request.items.each_with_index do |item, index| %>
                      <tr>
                        <td class="px-4 py-3 text-sm text-gray-900"><%= item.name %></td>
                        <td class="px-4 py-3 text-sm text-gray-700"><%= truncate(item.description, length: 50) %></td>
                        <td class="px-4 py-3 text-sm text-gray-900"><%= item.vendor&.name || "N/A" %></td>
                        <td class="px-4 py-3 text-sm text-gray-900"><%= item.quantity %></td>
                        <td class="px-4 py-3 text-sm text-gray-900">₱<%= number_with_precision(item.quoted_price, precision: 2) %></td>
                        <td class="px-4 py-3 text-sm font-medium text-gray-900">₱<%= number_with_precision(item.quantity * item.quoted_price, precision: 2) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                  <tfoot class="bg-gray-50">
                    <tr>
                      <td colspan="5" class="px-4 py-3 text-right text-sm font-semibold text-gray-900">Total:</td>
                      <td class="px-4 py-3 text-sm font-bold text-gray-900">₱<%= number_with_precision(@purchase_request.items.sum { |item| item.quantity * item.quoted_price }, precision: 2) %></td>
                    </tr>
                  </tfoot>
                </table>
              </div>
              
              <!-- Hidden fields for form submission of MRS items -->
              <% @purchase_request.items.each_with_index do |item, index| %>
                <%= hidden_field_tag "purchase_request[items_attributes][#{index}][name]", item.name %>
                <%= hidden_field_tag "purchase_request[items_attributes][#{index}][description]", item.description %>
                <%= hidden_field_tag "purchase_request[items_attributes][#{index}][quantity]", item.quantity %>
                <%= hidden_field_tag "purchase_request[items_attributes][#{index}][quoted_price]", item.quoted_price %>
                <% if item.vendor_id.present? %>
                  <%= hidden_field_tag "purchase_request[items_attributes][#{index}][vendor_id]", item.vendor_id %>
                <% end %>
                <% # Don't include material_requisition_slip_id - items for PR should only have purchase_request_id %>
                <% if item.id.present? %>
                  <%= hidden_field_tag "purchase_request[items_attributes][#{index}][id]", item.id %>
                <% end %>
              <% end %>
            <% else %>
              <div class="bg-gray-50 border border-gray-300 rounded-md p-8 text-center">
                <p class="text-gray-500">Please select a Material Requisition Slip to view items.</p>
              </div>
            <% end %>
          </div>

          <!-- Additional Information Section -->
          <div class="mb-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Additional Information
            </h3>
            
            <div class="space-y-4">
              <div>
                <%= form.label :reason_for_purchase, "Reason for Purchase *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_area :reason_for_purchase, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", placeholder: "Explain why this purchase is needed...", required: true %>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <%= form.label :sales_order_number, "Sales Order Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.text_field :sales_order_number, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", placeholder: "Enter sales order number" %>
                </div>
                
                <div>
                  <%= form.label :client_name, "Client Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.text_field :client_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", placeholder: "Enter client name" %>
                </div>
              </div>
              
              <div>
                <%= form.label :additional_notes, "Additional Notes", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_area :additional_notes, rows: 2, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", placeholder: "Any additional information or special requirements..." %>
              </div>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="flex items-center justify-between pt-6 border-t border-gray-200">
            <div class="flex items-center space-x-4">
              <%= link_to purchase_request_path, class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors" do %>
                Cancel
              <% end %>
            </div>
            
            <div class="flex items-center space-x-4">
              <%= form.submit "Submit Request", class: "px-6 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors font-medium" %>
            </div>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</div>

<!-- Tooltip for collapsed sidebar -->
<div id="tooltip" class="fixed bg-gray-800 text-white text-sm px-2 py-1 rounded shadow-lg opacity-0 pointer-events-none transition-opacity duration-200 z-50"></div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sidebar = document.getElementById('sidebar');
  const sidebarToggle = document.getElementById('sidebar-toggle');
  const mobileSidebarToggle = document.getElementById('mobile-sidebar-toggle');
  const sidebarTexts = document.querySelectorAll('.sidebar-text');
  const tooltip = document.getElementById('tooltip');
  
  // Toggle sidebar
  function toggleSidebar() {
    sidebar.classList.toggle('w-64');
    sidebar.classList.toggle('w-16');
    
    sidebarTexts.forEach(text => {
      text.classList.toggle('hidden');
    });
    
    // Update toggle button icon
    const icon = sidebarToggle.querySelector('svg');
    if (sidebar.classList.contains('w-16')) {
      icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>';
    } else {
      icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>';
    }
  }
  
  // Mobile sidebar toggle
  function toggleMobileSidebar() {
    sidebar.classList.toggle('hidden');
  }
  
  // Tooltip functionality for collapsed sidebar
  function showTooltip(event, text) {
    if (sidebar.classList.contains('w-16')) {
      tooltip.textContent = text;
      tooltip.style.left = event.pageX + 10 + 'px';
      tooltip.style.top = event.pageY - 10 + 'px';
      tooltip.classList.remove('opacity-0');
    }
  }
  
  function hideTooltip() {
    tooltip.classList.add('opacity-0');
  }
  
  // Event listeners
  sidebarToggle.addEventListener('click', toggleSidebar);
  mobileSidebarToggle.addEventListener('click', toggleMobileSidebar);
  
  // Add tooltip events to sidebar items
  const sidebarItems = document.querySelectorAll('#sidebar a, #sidebar button');
  sidebarItems.forEach(item => {
    const text = item.querySelector('.sidebar-text')?.textContent;
    if (text) {
      item.addEventListener('mouseenter', (e) => showTooltip(e, text));
      item.addEventListener('mouseleave', hideTooltip);
    }
  });
});
</script> 