<!-- Main Content -->
    <!-- Top Navigation -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="flex items-center justify-between px-6 py-4">
        <div class="flex items-center space-x-4">
          <button id="mobile-sidebar-toggle" class="text-gray-500 hover:text-gray-700 lg:hidden">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          <div class="flex items-center space-x-3">
            <a href="<%= purchase_request_path %>" class="text-gray-500 hover:text-gray-700">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
            </a>
            <h1 class="text-2xl font-bold text-gray-900">Create Purchase Request</h1>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <!-- User Profile -->
          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-red-600 rounded-full flex items-center justify-center">
              <span class="text-white font-semibold text-sm">A</span>
            </div>
            <div class="hidden md:block">
              <p class="text-sm font-medium text-gray-900">Admin User</p>
              <p class="text-xs text-gray-500">admin@example.com</p>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content Area -->
    <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
      <div class="max-w-4xl mx-auto">
        <!-- Purchase Request Form -->
        <%= form_with model: @purchase_request, url: create_purchase_request_path, local: true, class: "bg-white rounded-lg shadow-sm p-6" do |form| %>
          <!-- Error Messages -->
          <% if @purchase_request.errors.any? %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mb-6">
              <h4 class="font-medium">Please fix the following errors:</h4>
              <ul class="list-disc list-inside mt-2">
                <% @purchase_request.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <!-- Required Fields Note -->
          <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-md">
            <p class="text-sm text-blue-800">
              <span class="font-medium">Note:</span> Fields marked with <span class="text-red-600 font-bold">*</span> are required and must be filled out.
            </p>
          </div>

          <!-- Basic Information Section -->
          <div class="mb-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Basic Information
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= form.label :request_date, "Request Date *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.date_field :request_date, value: Date.current, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true %>
              </div>
              
              <div>
                <%= form.label :priority_level, "Priority Level *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.select :priority_level, options_for_select(@priority_levels.map { |p| [p, p.downcase] }, @purchase_request.priority_level), { prompt: "Select Priority" }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true } %>
              </div>
            </div>
          </div>

          <!-- Item Details Section -->
          <div class="mb-8">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
                Material Requisition Sheet (MRS) - Item List
              </h3>
              <button type="button" id="add-item-btn" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors text-sm font-medium">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add Item
              </button>
            </div>
            
            <div id="items-container" class="space-y-4">
              <!-- Items will be dynamically added here -->
            </div>
          </div>

          <!-- Vendor Details Section -->
          <div class="mb-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              Vendor Details
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= form.label :vendor_name, "Vendor Name *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_field :vendor_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", placeholder: "Enter vendor name", required: true %>
              </div>
              
              <div>
                <%= form.label :vendor_address, "Vendor Address *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_area :vendor_address, rows: 2, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", placeholder: "Enter complete vendor address", required: true %>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">2303 (Tax Certificate) *</label>
                <%= form.file_field :tax_certificate, accept: ".pdf,.jpg,.jpeg,.png", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true %>
                <p class="text-xs text-gray-500 mt-1">Upload vendor's 2303 tax certificate</p>
              </div>
              
              <div>
                <%= form.label :bank_details, "Bank Details", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_area :bank_details, rows: 2, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", placeholder: "Bank name, account number, etc." %>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Sample Sales Invoice</label>
                <%= form.file_field :sales_invoice, accept: ".pdf,.jpg,.jpeg,.png", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
                <p class="text-xs text-gray-500 mt-1">Upload sample sales invoice from vendor</p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Vendor Quotation *</label>
                <%= form.file_field :vendor_quotation, accept: ".pdf,.jpg,.jpeg,.png", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true %>
                <p class="text-xs text-gray-500 mt-1">Upload vendor quotation document</p>
              </div>
            </div>
          </div>

          <!-- Additional Information Section -->
          <div class="mb-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Additional Information
            </h3>
            
            <div class="space-y-4">
              <div>
                <%= form.label :reason_for_purchase, "Reason for Purchase *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_area :reason_for_purchase, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", placeholder: "Explain why this purchase is needed...", required: true %>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <%= form.label :sales_order_number, "Sales Order Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.text_field :sales_order_number, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", placeholder: "Enter sales order number" %>
                </div>
                
                <div>
                  <%= form.label :client_name, "Client Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.text_field :client_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", placeholder: "Enter client name" %>
                </div>
              </div>
              
              <div>
                <%= form.label :additional_notes, "Additional Notes", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_area :additional_notes, rows: 2, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent", placeholder: "Any additional information or special requirements..." %>
              </div>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="flex items-center justify-between pt-6 border-t border-gray-200">
            <div class="flex items-center space-x-4">
              <%= link_to purchase_request_path, class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors" do %>
                Cancel
              <% end %>
              <button type="button" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors">
                Save Draft
              </button>
            </div>
            
            <div class="flex items-center space-x-4">
              <%= form.submit "Submit Request", class: "px-6 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors font-medium" %>
            </div>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</div>

<!-- Tooltip for collapsed sidebar -->
<div id="tooltip" class="fixed bg-gray-800 text-white text-sm px-2 py-1 rounded shadow-lg opacity-0 pointer-events-none transition-opacity duration-200 z-50"></div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sidebar = document.getElementById('sidebar');
  const sidebarToggle = document.getElementById('sidebar-toggle');
  const mobileSidebarToggle = document.getElementById('mobile-sidebar-toggle');
  const sidebarTexts = document.querySelectorAll('.sidebar-text');
  const tooltip = document.getElementById('tooltip');
  
  // Toggle sidebar
  function toggleSidebar() {
    sidebar.classList.toggle('w-64');
    sidebar.classList.toggle('w-16');
    
    sidebarTexts.forEach(text => {
      text.classList.toggle('hidden');
    });
    
    // Update toggle button icon
    const icon = sidebarToggle.querySelector('svg');
    if (sidebar.classList.contains('w-16')) {
      icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>';
    } else {
      icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>';
    }
  }
  
  // Mobile sidebar toggle
  function toggleMobileSidebar() {
    sidebar.classList.toggle('hidden');
  }
  
  // Tooltip functionality for collapsed sidebar
  function showTooltip(event, text) {
    if (sidebar.classList.contains('w-16')) {
      tooltip.textContent = text;
      tooltip.style.left = event.pageX + 10 + 'px';
      tooltip.style.top = event.pageY - 10 + 'px';
      tooltip.classList.remove('opacity-0');
    }
  }
  
  function hideTooltip() {
    tooltip.classList.add('opacity-0');
  }
  
  // Dynamic Items Functionality
  let itemCounter = 0;
  const itemsContainer = document.getElementById('items-container');
  const addItemBtn = document.getElementById('add-item-btn');
  
  function createItemRow() {
    itemCounter++;
    const itemRow = document.createElement('div');
    itemRow.className = 'bg-gray-50 border border-gray-200 rounded-lg p-4';
    itemRow.id = `item-${itemCounter}`;
    
    itemRow.innerHTML = `
      <div class="flex items-center justify-between mb-4">
        <h4 class="text-md font-medium text-gray-900">Item ${itemCounter}</h4>
        <button type="button" class="remove-item-btn text-red-600 hover:text-red-800 transition-colors" onclick="removeItem(${itemCounter})">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        </button>
      </div>
      
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Item Description *</label>
          <textarea name="purchase_request[items_attributes][${itemCounter}][description]" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" placeholder="Provide detailed description of the item..." required></textarea>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Quantity *</label>
            <input type="number" name="purchase_request[items_attributes][${itemCounter}][quantity]" min="1" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" placeholder="Enter quantity" required>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Estimated Cost (â‚±) *</label>
            <input type="number" name="purchase_request[items_attributes][${itemCounter}][cost]" min="0" step="0.01" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" placeholder="0.00" required>
          </div>
        </div>
      </div>
    `;
    
    return itemRow;
  }
  
  function addItem() {
    const itemRow = createItemRow();
    itemsContainer.appendChild(itemRow);
    
    // Scroll to the new item
    itemRow.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  }
  
  function removeItem(itemId) {
    const itemElement = document.getElementById(`item-${itemId}`);
    if (itemElement) {
      itemElement.remove();
    }
  }
  
  // Make removeItem globally available
  window.removeItem = removeItem;
  
  // Add initial item
  addItem();
  
  // Event listeners
  sidebarToggle.addEventListener('click', toggleSidebar);
  mobileSidebarToggle.addEventListener('click', toggleMobileSidebar);
  addItemBtn.addEventListener('click', addItem);
  
  // Add tooltip events to sidebar items
  const sidebarItems = document.querySelectorAll('#sidebar a, #sidebar button');
  sidebarItems.forEach(item => {
    const text = item.querySelector('.sidebar-text')?.textContent;
    if (text) {
      item.addEventListener('mouseenter', (e) => showTooltip(e, text));
      item.addEventListener('mouseleave', hideTooltip);
    }
  });
});
</script> 