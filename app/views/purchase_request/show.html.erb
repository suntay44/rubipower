<!-- Header with Back Button, Title, Create Purchase Order Button, and User Profile -->
<div class="bg-white border-b border-gray-200 px-6 py-4">
  <div class="flex items-center justify-between">
    <!-- Left Side: Back Button and Page Title -->
    <div class="flex items-center space-x-4">
      <%= link_to purchase_request_path, class: "flex items-center text-gray-600 hover:text-gray-900 transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Purchase Requests
      <% end %>
    </div>
    
    <!-- Right Side: Create Purchase Order Button, User Profile, and Edit Button -->
    <div class="flex items-center space-x-4">      
      <!-- Edit Button (Admin Only) -->
      <% if current_user&.admin? %>
        <button onclick="editRequest(<%= @request[:id] %>)" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors shadow-sm">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit Request
        </button>
      <% end %>

       <!-- Purchase Order Button (Create or View based on status) -->
       <% if @request[:purchase_order_created] %>
         <!-- View Purchase Order Button -->
         <button onclick="viewPurchaseOrder(<%= @request[:id] %>)" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md font-medium transition-colors">
           <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
           </svg>
           View P.O.
         </button>
       <% else %>
         <!-- Create Purchase Order Button -->
         <button onclick="createPurchaseOrder(<%= @request[:id] %>)" class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md font-medium transition-colors">
           <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
           </svg>
           Create P.O.
         </button>
       <% end %>
      
      <!-- User Profile (moved to the far right) -->
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-red-600 rounded-full flex items-center justify-center">
          <span class="text-white font-semibold text-sm">
            <%= current_user&.first_name&.first&.upcase || 'A' %>
          </span>
        </div>
        <div class="text-right">
          <div class="text-sm font-medium text-gray-900">
            <%= current_user&.first_name %> <%= current_user&.last_name %>
          </div>
          <div class="text-xs text-gray-500">
            <%= current_user&.email %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Status Section -->
<div class="bg-gray-50 border-b border-gray-200 px-6 py-4">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <h3 class="text-sm font-medium text-gray-700">Approval Status</h3>
    </div>
    
    <div class="flex items-center space-x-3">
      <!-- Engineering Budget Status -->
      <div class="flex items-center space-x-2">
        <span class="text-xs font-medium text-gray-500">Engineering Budget:</span>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= 
          case @request[:engineering_budget_status]
          when 'Pending'
            'bg-yellow-100 text-yellow-800'
          when 'Approved'
            'bg-green-100 text-green-800'
          when 'Rejected'
            'bg-red-100 text-red-800'
          else
            'bg-gray-100 text-gray-800'
          end
        %>">
          <div class="w-2 h-2 rounded-full mr-2 <%= 
            case @request[:engineering_budget_status]
            when 'Pending'
              'bg-yellow-400'
            when 'Approved'
              'bg-green-400'
            when 'Rejected'
              'bg-red-400'
            else
              'bg-gray-400'
            end
          %>"></div>
          <%= @request[:engineering_budget_status] %>
        </span>
      </div>
      
      <!-- Procurement Review Status -->
      <div class="flex items-center space-x-2">
        <span class="text-xs font-medium text-gray-500">Procurement Review:</span>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= 
          case @request[:procurement_review_status]
          when 'Pending'
            'bg-yellow-100 text-yellow-800'
          when 'Approved'
            'bg-green-100 text-green-800'
          when 'Rejected'
            'bg-red-100 text-red-800'
          else
            'bg-gray-100 text-gray-800'
          end
        %>">
          <div class="w-2 h-2 rounded-full mr-2 <%= 
            case @request[:procurement_review_status]
            when 'Pending'
              'bg-yellow-400'
            when 'Approved'
              'bg-green-400'
            when 'Rejected'
              'bg-red-400'
            else
              'bg-gray-400'
            end
          %>"></div>
          <%= @request[:procurement_review_status] %>
        </span>
      </div>
    </div>
  </div>
</div>

<!-- Action Buttons Section (Admin Only) -->
<% if current_user&.admin? %>
  <div class="bg-white border-b border-gray-200 px-6 py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <h3 class="text-sm font-medium text-gray-700">Actions</h3>
      </div>
      
      <div class="flex items-center space-x-3">
        <!-- Engineering Budget Actions -->
        <% if @request[:engineering_budget_status] == 'Pending' %>
          <button onclick="approveEngineeringBudget(<%= @request[:id] %>)" class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-green-600 hover:bg-green-700 transition-colors shadow-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Approve Engineering Budget
          </button>
          <button onclick="rejectEngineeringBudget(<%= @request[:id] %>)" class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-red-600 hover:bg-red-700 transition-colors shadow-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Reject Engineering Budget
          </button>
        <% end %>
        
        <!-- Procurement Review Actions -->
        <% if @request[:procurement_review_status] == 'Pending' %>
          <button onclick="approveProcurementReview(<%= @request[:id] %>)" class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-green-600 hover:bg-green-700 transition-colors shadow-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Approve Procurement Review
          </button>
          <button onclick="rejectProcurementReview(<%= @request[:id] %>)" class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-red-600 hover:bg-red-700 transition-colors shadow-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Reject Procurement Review
          </button>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Main Content -->
<div class="bg-gray-50 min-h-screen p-6">

  <div class="space-y-6">
    <!-- Request Header -->
    <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
      <div class="flex items-center space-x-4">
        <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
        </div>
        <div>
          <h4 class="text-2xl font-bold text-gray-900">Request #<%= @request[:id] %></h4>
          <p class="text-sm text-gray-500">Purchase Request Details</p>
        </div>
      </div>
    </div>

    <!-- Requester and Department Info -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-500">Requester</label>
            <p class="text-lg font-semibold text-gray-900"><%= @request[:requester] %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-500">Department</label>
            <p class="text-lg font-semibold text-gray-900"><%= @request[:department] %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Items and Description -->
    <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
      <div class="flex items-start space-x-4">
        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
        </div>
        <div class="flex-1">
          <label class="block text-sm font-medium text-gray-500 mb-1">Items Requested</label>
          <p class="text-lg font-semibold text-gray-900 mb-3"><%= @request[:items] %></p>
          <label class="block text-sm font-medium text-gray-500 mb-1">Description</label>
          <p class="text-sm text-gray-700 leading-relaxed"><%= @request[:description] %></p>
        </div>
      </div>
    </div>

    <!-- Cost and Date Info -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-500">Estimated Cost</label>
            <p class="text-2xl font-bold text-gray-900">₱<%= number_with_delimiter(@request[:estimated_cost]) %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-500">Created Date</label>
            <p class="text-lg font-semibold text-gray-900"><%= @request[:created_at] %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

