function approveProcurementReview(requestId) {
  if (confirm('Are you sure you want to approve the Procurement Review?')) {
    // In real app, this would make an API call
    console.log('Approving Procurement Review for request:', requestId);
    alert('Procurement Review approved successfully!');
    // Reload the page to show updated status
    window.location.reload();
  }
}

function rejectProcurementReview(requestId) {
  if (confirm('Are you sure you want to reject the Procurement Review?')) {
    // In real app, this would make an API call
    console.log('Rejecting Procurement Review for request:', requestId);
    alert('Procurement Review rejected successfully!');
    // Reload the page to show updated status
    window.location.reload();
  }
