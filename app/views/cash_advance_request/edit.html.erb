<!-- Main Content -->
    <!-- Top Navigation -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="flex items-center justify-between px-6 py-4">
        <div class="flex items-center space-x-4">
          <a href="<%= cash_advance_request_path(@cash_advance_request) %>" class="text-gray-500 hover:text-gray-700">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          </a>
          <div class="flex items-center space-x-3">
            <h1 class="text-2xl font-bold text-gray-900">Edit Cash Advance Request #<%= @cash_advance_request.id %></h1>
          </div>
        </div>
      </div>
    </header>

    <!-- Content -->
    <div class="p-6">
      <div class="max-w-4xl mx-auto">
        <%= form_with model: @cash_advance_request, local: true, class: "space-y-8" do |form| %>
          <% if @cash_advance_request.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    There were <%= pluralize(@cash_advance_request.errors.count, "error") %> with your submission:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc list-inside space-y-1">
                      <% @cash_advance_request.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Employee Information -->
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Employee Information</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= form.label :employee_name, "Employee Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <% if @is_admin %>
                  <%= form.select :employee_name, options_for_select(@users.map { |user| [user.full_name, user.full_name] }, @cash_advance_request.employee_name), { prompt: "Select Employee" }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500", id: "employee_name_select", onchange: "updateEmployeeInfo()", required: true } %>
                <% else %>
                  <%= form.text_field :employee_name, value: @cash_advance_request.employee_name, readonly: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600" %>
                <% end %>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Employee ID</label>
                <div id="employee_id_display" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600">
                  <%= @cash_advance_request.employee_id.present? ? @cash_advance_request.employee_id : "Select an employee to see ID" %>
                </div>
                <%= form.hidden_field :employee_id, id: "employee_id_hidden", value: @cash_advance_request.employee_id %>
              </div>
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">Department</label>
                <div id="department_display" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600">
                  <%= @cash_advance_request.department.present? ? @cash_advance_request.department : "Select an employee to see department" %>
                </div>
                <%= form.hidden_field :department, id: "department_hidden", value: @cash_advance_request.department %>
              </div>
            </div>
          </div>

          <!-- Project Information -->
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Project Information</h3>
            <div class="space-y-6">
              <div>
                <%= form.label :sale_id, "Select Sale *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="relative">
                  <input type="text" id="sale_search" placeholder="Search by project name..." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" onkeyup="filterSales()" onfocus="showSaleDropdown()" autocomplete="off" required value="<%= @cash_advance_request.sale&.project_name %>">
                  <%= form.hidden_field :sale_id, id: "sale_id_hidden", required: true, value: @cash_advance_request.sale_id %>
                  <div id="sale_dropdown" class="hidden absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-md shadow-lg max-h-60 overflow-auto">
                    <!-- Dropdown items will be populated here -->
                  </div>
                </div>
                <div id="selected_sale_display" class="mt-2 p-2 bg-gray-50 border border-gray-200 rounded-md text-sm text-gray-700 <%= 'hidden' unless @cash_advance_request.sale.present? %>">
                  <span class="font-medium">Selected: </span><span id="selected_sale_text"><%= @cash_advance_request.sale ? "#{@cash_advance_request.sale.project_name} - #{@cash_advance_request.sale.client_name} (‚Ç±#{number_with_precision(@cash_advance_request.sale.total_amount, precision: 2)})" : '' %></span>
                </div>
                <p class="text-xs text-gray-500 mt-1">Select a sale to auto-populate project information</p>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <%= form.label :sales_order_number, "Sales Order Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.text_field :sales_order_number, required: true, readonly: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600 focus:outline-none", id: "sales_order_number_field" %>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Sale Total</label>
                  <div id="sale_total_display" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600">
                    <% if @cash_advance_request.sale.present? %>
                      ‚Ç±<%= number_with_precision(@cash_advance_request.sale.total_amount, precision: 2) %>
                    <% else %>
                      Select a sale to see total
                    <% end %>
                  </div>
                  <%= form.hidden_field :sale_total, id: "sale_total_hidden", value: @cash_advance_request.sale&.total_amount %>
                </div>
                <div>
                  <%= form.label :client_name, "Client Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.text_field :client_name, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500", id: "client_name_field" %>
                </div>
                <div>
                  <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500", id: "description_field" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Request Details -->
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Request Details</h3>
            <div class="space-y-6">
              <div>
                <%= form.label :purpose_of_advance, "Purpose of Advance", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <p class="text-sm text-gray-500 mb-2">e.g., travel, project purchase</p>
                <%= form.text_area :purpose_of_advance, rows: 3, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" %>
              </div>
              <!-- Breakdown of Expenses - Item List -->
              <div>
                <div class="flex items-center justify-between mb-4">
                  <%= form.label :breakdown_of_expenses, "Breakdown of Expenses", class: "block text-sm font-medium text-gray-700" %>
                  <button type="button" onclick="addExpenseItem()" class="px-3 py-1 bg-red-600 text-white text-sm rounded-md hover:bg-red-700 transition-colors">
                    + Add Item
                  </button>
                </div>
                <div id="expense-items-container" class="space-y-3">
                  <!-- Expense items will be added here dynamically -->
                </div>
                <div id="expense-items-total" class="mt-4 p-3 bg-gray-50 rounded-md border border-gray-200">
                  <div class="flex justify-between items-center">
                    <span class="text-sm font-semibold text-gray-700">Total Amount:</span>
                    <span class="text-lg font-bold text-gray-900">‚Ç±<span id="total-amount-display">0.00</span></span>
                  </div>
                </div>
                <!-- Hidden field to store JSON data -->
                <%= form.hidden_field :breakdown_of_expenses, id: "breakdown_of_expenses_hidden" %>
                <%= form.hidden_field :amount_requested, id: "amount_requested_hidden" %>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <%= form.label :required_date, "Required Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.date_field :required_date, required: true, min: (Date.current + 3.days).strftime("%Y-%m-%d"), class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" %>
                  <p class="text-xs text-gray-500 mt-1">Required date must be at least 3 days from today</p>
                </div>
              </div>
              <div>
                <%= form.label :supporting_documents, "Supporting Documents", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <p class="text-sm text-gray-500 mb-2">Upload supporting documents (PDF, DOC, DOCX, JPG, PNG)</p>
                
                <!-- Display existing attachments -->
                <% if @cash_advance_request.supporting_documents.attached? %>
                  <div class="mb-4">
                    <h4 class="text-sm font-medium text-gray-700 mb-2">Current Attachments:</h4>
                    <div class="space-y-2">
                      <% @cash_advance_request.supporting_documents.each do |attachment| %>
                        <div class="flex items-center justify-between p-2 bg-blue-50 rounded border">
                          <div class="flex items-center space-x-2">
                            <span class="text-blue-600">üìé</span>
                            <span class="text-sm text-gray-700"><%= attachment.filename %></span>
                            <span class="text-xs text-gray-500">(<%= number_to_human_size(attachment.byte_size) %>)</span>
                          </div>
                          <div class="flex items-center space-x-2">
                            <%= link_to "Download", rails_blob_path(attachment, disposition: "attachment"), class: "text-xs text-blue-600 hover:text-blue-800" %>
                            <button type="button" onclick="deleteAttachment(<%= attachment.blob_id %>)" 
                                    class="text-xs text-red-600 hover:text-red-800 bg-transparent border-none cursor-pointer">
                              Delete
                            </button>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
                
                <%= form.file_field :supporting_documents, multiple: true, accept: ".pdf,.doc,.docx,.jpg,.jpeg,.png", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" %>
                <div id="file-preview" class="mt-2 space-y-2"></div>
              </div>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="flex justify-end space-x-4">
            <%= link_to "Cancel", cash_advance_request_path(@cash_advance_request), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
            <%= form.submit "Update Request", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
          </div>
        <% end %>
      </div>
    </div>

<script>
  // User data for JavaScript
  const users = <%= raw @users.map { |user| { name: user.full_name, id: user.employee_id, user_id: user.id, department: user.department&.titleize } }.to_json %>;

  // Sales data for JavaScript
  const sales = <%= raw @sales.map { |sale| { id: sale.id, sale_number: sale.sale_number, project_name: sale.project_name, client_name: sale.client_name, description: sale.description || '', total_amount: sale.total_amount.to_f } }.to_json %>;

  // Function to show dropdown
  function showSaleDropdown() {
    const dropdown = document.getElementById('sale_dropdown');
    const searchInput = document.getElementById('sale_search');
    
    if (dropdown && searchInput) {
      dropdown.classList.remove('hidden');
      filterSales();
    }
  }

  // Function to hide dropdown
  function hideSaleDropdown() {
    const dropdown = document.getElementById('sale_dropdown');
    if (dropdown) {
      setTimeout(() => {
        dropdown.classList.add('hidden');
      }, 200); // Small delay to allow click events
    }
  }

  // Function to select a sale
  function selectSale(saleId, saleText) {
    const searchInput = document.getElementById('sale_search');
    const hiddenInput = document.getElementById('sale_id_hidden');
    const selectedDisplay = document.getElementById('selected_sale_display');
    const selectedText = document.getElementById('selected_sale_text');
    const dropdown = document.getElementById('sale_dropdown');
    
    // Find the sale to get full details
    const sale = sales.find(s => s.id == saleId);
    const fullDisplayText = sale ? `${sale.project_name} - ${sale.client_name} (‚Ç±${sale.total_amount.toFixed(2)})` : saleText;
    
    if (searchInput && hiddenInput) {
      hiddenInput.value = saleId;
      searchInput.value = saleText;
      if (selectedDisplay && selectedText) {
        selectedText.textContent = fullDisplayText;
        selectedDisplay.classList.remove('hidden');
      }
      if (dropdown) {
        dropdown.classList.add('hidden');
      }
      populateFromSale();
    }
  }

  // Function to filter sales in dropdown by project name
  function filterSales() {
    const searchInput = document.getElementById('sale_search');
    const dropdown = document.getElementById('sale_dropdown');
    const filter = searchInput.value.toLowerCase().trim();
    
    if (!dropdown) return;
    
    // Clear dropdown
    dropdown.innerHTML = '';
    
    // Filter sales by project name only
    const filteredSales = sales.filter(sale => {
      return sale.project_name && sale.project_name.toLowerCase().includes(filter);
    });
    
    if (filteredSales.length === 0 && filter !== '') {
      dropdown.innerHTML = '<div class="px-3 py-2 text-sm text-gray-500">No sales found</div>';
      return;
    }
    
    // Show all sales if search is empty, otherwise show filtered
    const salesToShow = filter === '' ? sales : filteredSales;
    
    salesToShow.forEach(sale => {
      const item = document.createElement('div');
      item.className = 'px-3 py-2 hover:bg-red-50 cursor-pointer border-b border-gray-100';
      item.innerHTML = `
        <div class="font-medium text-gray-900">${sale.project_name}</div>
        <div class="text-xs text-gray-500">${sale.client_name} - ‚Ç±${sale.total_amount.toFixed(2)}</div>
      `;
      item.onclick = () => {
        const displayText = `${sale.project_name} - ${sale.client_name} (‚Ç±${sale.total_amount.toFixed(2)})`;
        selectSale(sale.id, sale.project_name);
      };
      dropdown.appendChild(item);
    });
    
    // Show dropdown if there are results
    if (salesToShow.length > 0) {
      dropdown.classList.remove('hidden');
    }
  }

  // Function to populate fields from selected sale
  function populateFromSale() {
    const hiddenInput = document.getElementById('sale_id_hidden');
    const selectedSaleId = hiddenInput ? hiddenInput.value : null;
    
    if (!selectedSaleId || selectedSaleId === '') {
      // Clear fields if no sale is selected
      const salesOrderNumberField = document.getElementById('sales_order_number_field');
      const saleTotalDisplay = document.getElementById('sale_total_display');
      const saleTotalHidden = document.getElementById('sale_total_hidden');
      
      if (salesOrderNumberField) salesOrderNumberField.value = '';
      if (saleTotalDisplay) saleTotalDisplay.textContent = 'Select a sale to see total';
      if (saleTotalHidden) saleTotalHidden.value = '';
      return;
    }
    
    const sale = sales.find(s => s.id == selectedSaleId);
    
    if (sale) {
      // Populate Sales Order Number from sale's project_name
      const salesOrderNumberField = document.getElementById('sales_order_number_field');
      if (salesOrderNumberField) {
        salesOrderNumberField.value = sale.project_name || '';
      }
      
      // Display Sale Total
      const saleTotalDisplay = document.getElementById('sale_total_display');
      const saleTotalHidden = document.getElementById('sale_total_hidden');
      if (saleTotalDisplay && saleTotalHidden && sale.total_amount) {
        saleTotalDisplay.textContent = `‚Ç±${sale.total_amount.toFixed(2)}`;
        saleTotalHidden.value = sale.total_amount.toFixed(2);
      }
      
      // Populate fields (editable)
      const clientNameField = document.getElementById('client_name_field');
      const descriptionField = document.getElementById('description_field');
      
      if (clientNameField) {
        clientNameField.value = sale.client_name || '';
      }
      if (descriptionField) {
        descriptionField.value = sale.description || '';
      }
    }
  }

  // Expense items management
  let expenseItemCounter = 0;
  
  // Load existing expense items from JSON
  <% 
    begin
      existing_items = JSON.parse(@cash_advance_request.breakdown_of_expenses || '[]')
    rescue JSON::ParserError
      existing_items = []
    end
  %>
  const existingExpenseItems = <%= raw existing_items.to_json %>;

  function addExpenseItem(name = '', amount = '') {
    expenseItemCounter++;
    const container = document.getElementById('expense-items-container');
    const itemRow = document.createElement('div');
    itemRow.className = 'expense-item-row bg-gray-50 border border-gray-200 rounded-lg p-4';
    itemRow.id = `expense-item-${expenseItemCounter}`;
    
    itemRow.innerHTML = `
      <div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end">
        <div class="md:col-span-5">
          <label class="block text-sm font-medium text-gray-700 mb-2">Name *</label>
          <input type="text" class="expense-item-name w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" placeholder="Enter expense name" value="${name}" required onchange="updateExpenseData()">
        </div>
        <div class="md:col-span-5">
          <label class="block text-sm font-medium text-gray-700 mb-2">Amount Requested (‚Ç±) *</label>
          <input type="number" step="0.01" min="0" class="expense-item-amount w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" placeholder="0.00" value="${amount}" required onchange="updateExpenseData()" oninput="updateExpenseData()">
        </div>
        <div class="md:col-span-2">
          <button type="button" onclick="removeExpenseItem(${expenseItemCounter})" class="w-full px-3 py-2 bg-red-600 text-white text-sm rounded-md hover:bg-red-700 transition-colors">
            Remove
          </button>
        </div>
      </div>
    `;
    
    container.appendChild(itemRow);
    updateExpenseData();
  }

  function removeExpenseItem(itemId) {
    const itemRow = document.getElementById(`expense-item-${itemId}`);
    if (itemRow) {
      itemRow.remove();
      updateExpenseData();
    }
  }

  function updateExpenseData() {
    const items = [];
    let totalAmount = 0;
    
    document.querySelectorAll('.expense-item-row').forEach(row => {
      const nameInput = row.querySelector('.expense-item-name');
      const amountInput = row.querySelector('.expense-item-amount');
      
      if (nameInput && amountInput && nameInput.value.trim() && amountInput.value) {
        const name = nameInput.value.trim();
        const amount = parseFloat(amountInput.value) || 0;
        items.push({ name: name, amount: amount });
        totalAmount += amount;
      }
    });
    
    // Update hidden fields
    const breakdownField = document.getElementById('breakdown_of_expenses_hidden');
    const amountField = document.getElementById('amount_requested_hidden');
    const totalDisplay = document.getElementById('total-amount-display');
    
    breakdownField.value = JSON.stringify(items);
    amountField.value = totalAmount.toFixed(2);
    totalDisplay.textContent = totalAmount.toFixed(2);
  }

  function updateEmployeeInfo() {
    const select = document.getElementById('employee_name_select');
    const idDisplay = document.getElementById('employee_id_display');
    const idHidden = document.getElementById('employee_id_hidden');
    const deptDisplay = document.getElementById('department_display');
    const deptHidden = document.getElementById('department_hidden');
    
    const selectedName = select ? select.value : '<%= @cash_advance_request.employee_name %>';
    const user = users.find(u => u.name === selectedName);
    
    if (user) {
      // Update Employee ID
      idDisplay.textContent = user.id || '';
      idDisplay.className = "w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600";
      idHidden.value = user.id || '';
      
      // Update Department
      if (user.department) {
        deptDisplay.textContent = user.department;
        deptDisplay.className = "w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600";
        deptHidden.value = user.department;
      } else {
        deptDisplay.textContent = "No department assigned";
        deptDisplay.className = "w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600";
        deptHidden.value = "";
      }
    } else {
      idDisplay.textContent = "Select an employee to see ID";
      idDisplay.className = "w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600";
      idHidden.value = "";
      deptDisplay.textContent = "Select an employee to see department";
      deptDisplay.className = "w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600";
      deptHidden.value = "";
    }
  }

  // Initialize on page load for edit form
  document.addEventListener('DOMContentLoaded', function() {
    <% if !@is_admin && @cash_advance_request.employee_name.present? %>
      // Auto-populate for non-admin users
      updateEmployeeInfo();
    <% else %>
      const select = document.getElementById('employee_name_select');
      if (select && select.value) {
        updateEmployeeInfo();
      }
    <% end %>
    
    // Initialize Sales Order Number if sale is already selected
    const hiddenInput = document.getElementById('sale_id_hidden');
    if (hiddenInput && hiddenInput.value) {
      populateFromSale();
    }
    
    // Hide dropdown when clicking outside
    document.addEventListener('click', function(e) {
      const searchInput = document.getElementById('sale_search');
      const dropdown = document.getElementById('sale_dropdown');
      if (searchInput && dropdown && !searchInput.contains(e.target) && !dropdown.contains(e.target)) {
        hideSaleDropdown();
      }
    });
    
    // Load existing expense items
    if (existingExpenseItems && existingExpenseItems.length > 0) {
      existingExpenseItems.forEach(item => {
        addExpenseItem(item.name || item['name'] || '', item.amount || item['amount'] || '');
      });
    } else {
      // If no items exist, add one empty item
      addExpenseItem();
    }
    
    // Update expense data before form submission
    const form = document.querySelector('form');
    if (form) {
      form.addEventListener('submit', function(e) {
        updateExpenseData();
        
        // Validate that at least one item exists
        const items = JSON.parse(document.getElementById('breakdown_of_expenses_hidden').value || '[]');
        if (items.length === 0) {
          e.preventDefault();
          alert('Please add at least one expense item.');
          return false;
        }
      });
    }

    // File preview functionality
    const fileInput = document.querySelector('input[type="file"][multiple]');
    const filePreview = document.getElementById('file-preview');

    if (fileInput) {
      fileInput.addEventListener('change', function(e) {
        filePreview.innerHTML = '';
        
        Array.from(e.target.files).forEach((file, index) => {
          const fileItem = document.createElement('div');
          fileItem.className = 'flex items-center justify-between p-2 bg-gray-50 rounded border';
          
          const fileInfo = document.createElement('div');
          fileInfo.className = 'flex items-center space-x-2';
          
          const fileIcon = document.createElement('div');
          fileIcon.className = 'w-4 h-4 text-gray-500';
          fileIcon.innerHTML = getFileIcon(file.type);
          
          const fileName = document.createElement('span');
          fileName.className = 'text-sm text-gray-700';
          fileName.textContent = file.name;
          
          const fileSize = document.createElement('span');
          fileSize.className = 'text-xs text-gray-500';
          fileSize.textContent = `(${formatFileSize(file.size)})`;
          
          fileInfo.appendChild(fileIcon);
          fileInfo.appendChild(fileName);
          fileInfo.appendChild(fileSize);
          
          fileItem.appendChild(fileInfo);
          filePreview.appendChild(fileItem);
        });
      });
    }
  });

  function getFileIcon(fileType) {
    if (fileType.includes('pdf')) return 'üìÑ';
    if (fileType.includes('word') || fileType.includes('document')) return 'üìù';
    if (fileType.includes('image')) return 'üñºÔ∏è';
    return 'üìé';
  }

  function formatFileSize(bytes) {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
  }

  function deleteAttachment(blobId) {
    if (confirm('Are you sure you want to delete this attachment?')) {
      fetch(`/cash-advance-request/<%= @cash_advance_request.id %>/delete-attachment/${blobId}`, {
        method: 'DELETE',
        headers: {
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
          'Content-Type': 'application/json'
        }
      })
      .then(response => {
        if (response.ok) {
          location.reload();
        } else {
          alert('Error deleting attachment');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error deleting attachment');
      });
    }
  }
  
  // Make deleteAttachment globally available
  window.deleteAttachment = deleteAttachment;
</script>
