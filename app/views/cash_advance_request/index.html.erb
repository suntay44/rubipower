<!-- Main Content -->
    <!-- Top Navigation -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="flex items-center justify-between px-6 py-4">
        <div class="flex items-center space-x-4">
          <button id="mobile-sidebar-toggle" class="text-gray-500 hover:text-gray-700 lg:hidden">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          <div class="flex items-center space-x-3">
            <h1 class="text-2xl font-bold text-gray-900">Cash Advance Requests</h1>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <a href="<%= new_cash_advance_request_path %>" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors duration-200 flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>Cash Advance Request</span>
          </a>
        </div>
      </div>
    </header>

    <!-- Content -->
    <div class="p-6">
      <!-- Filters -->
      <%= form_with url: cash_advance_requests_path, method: :get, local: true, class: "bg-white p-4 rounded-lg shadow mb-6" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div>
            <%= f.label :finance_status, "Finance Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :finance_status, options_for_select([
              ['All', ''],
              ['Pending', 'finance_pending'],
              ['Approved', 'finance_approved'],
              ['Rejected', 'finance_rejected']
            ], params[:finance_status]), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
          <div>
            <%= f.label :department, "Department", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :department, options_for_select([['All', '']] + User.departments.keys.map { |d| [d.titleize, d.titleize] }, params[:department]), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
          <div>
            <%= f.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :search, placeholder: "Employee, ID, or Order #", value: params[:search], class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
          </div>
          <div class="flex items-end">
            <%= f.submit "Filter", class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 w-full" %>
          </div>
        </div>
      <% end %>

      <!-- Table -->
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Request ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employee</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Department</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sales Order</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Purpose</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Required Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @cash_advance_requests.any? %>
              <% @cash_advance_requests.each do |request| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    #<%= request.id %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <div>
                      <div class="font-medium"><%= request.employee_name %></div>
                      <div class="text-gray-500">ID: <%= request.employee_id %></div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= request.department %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= request.sales_order_number.present? ? request.sales_order_number : 'N/A' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <div class="max-w-xs truncate" title="<%= request.purpose_of_advance %>">
                      <%= truncate(request.purpose_of_advance, length: 50) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    â‚±<%= number_with_precision(request.amount_requested, precision: 2) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= request.required_date.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                      <%= case request.finance_department_status
                          when 'pending' then 'bg-yellow-100 text-yellow-800'
                          when 'approved' then 'bg-green-100 text-green-800'
                          when 'rejected' then 'bg-red-100 text-red-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= request.finance_department_status&.humanize || 'Unknown' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= request.created_at.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <a href="<%= cash_advance_request_path(request) %>" class="text-red-600 hover:text-red-900">
                      View Details
                    </a>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="10" class="px-6 py-8 text-center text-sm text-gray-500">
                  No cash advance requests found. <%= link_to "Create one", new_cash_advance_request_path, class: "text-red-600 hover:text-red-800" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
