<!-- Main Content -->
<div class="flex-1 flex flex-col overflow-hidden">
    <!-- Top Navigation -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="flex items-center justify-between px-4 sm:px-6 py-4">
        <div class="flex items-center space-x-4">
          <button id="mobile-sidebar-toggle" class="text-gray-500 hover:text-gray-700 lg:hidden">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          <h1 class="text-xl sm:text-2xl font-bold text-gray-900">Dashboard</h1>
        </div>
        
        <div class="flex items-center space-x-2 sm:space-x-4">
          <!-- Notifications -->
          <button class="text-gray-500 hover:text-gray-700 relative">
            <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
            <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-4 w-4 sm:h-5 sm:w-5 flex items-center justify-center text-xs">3</span>
          </button>
          
          <!-- User Profile -->
          <div class="flex items-center space-x-2 sm:space-x-3">
            <div class="w-7 h-7 sm:w-8 sm:h-8 bg-red-600 rounded-full flex items-center justify-center">
              <span class="text-white font-semibold text-xs sm:text-sm"><%= @user.first_name[0] %></span>
            </div>
            <div class="hidden sm:block">
              <p class="text-sm font-medium text-gray-900"><%= @user.full_name %></p>
              <p class="text-xs text-gray-500"><%= @user.email %></p>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content Area -->
    <main class="flex-1 overflow-y-auto bg-gray-50 p-3 sm:p-6">
      <div class="max-w-7xl mx-auto">
        <!-- Welcome Section -->
        <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 mb-4 sm:mb-6">
          <div class="text-center">
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">Welcome to Rubipower!</h2>
            <p class="text-gray-600 text-sm sm:text-base">You are successfully logged in.</p>
          </div>
        </div>
        
        <!-- User Information Cards -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6">
          <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6">
            <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-3 sm:mb-4 flex items-center">
              <svg class="w-4 h-4 sm:w-5 sm:h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              User Information
            </h3>
            <div class="space-y-2 sm:space-y-3">
              <div class="flex flex-col sm:flex-row sm:justify-between">
                <span class="text-gray-600 text-sm sm:text-base">Name:</span>
                <span class="font-medium text-sm sm:text-base break-words"><%= @user.full_name %></span>
              </div>
              <div class="flex flex-col sm:flex-row sm:justify-between">
                <span class="text-gray-600 text-sm sm:text-base">Email:</span>
                <span class="font-medium text-sm sm:text-base break-words"><%= @user.email %></span>
              </div>
              <div class="flex flex-col sm:flex-row sm:justify-between">
                <span class="text-gray-600 text-sm sm:text-base">Phone:</span>
                <span class="font-medium text-sm sm:text-base break-words"><%= @user.phone_number %></span>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6">
            <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-3 sm:mb-4 flex items-center">
              <svg class="w-4 h-4 sm:w-5 sm:h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              Roles & Permissions
            </h3>
            <div class="space-y-2 sm:space-y-3">
              <div class="flex flex-col sm:flex-row sm:justify-between">
                <span class="text-gray-600 text-sm sm:text-base">Roles:</span>
                <span class="font-medium text-sm sm:text-base break-words"><%= @role_names.join(', ') %></span>
              </div>
              <div class="flex flex-col sm:flex-row sm:justify-between">
                <span class="text-gray-600 text-sm sm:text-base">Can Manage Users:</span>
                <span class="font-medium text-sm sm:text-base <%= @can_manage_users ? 'text-green-600' : 'text-red-600' %>">
                  <%= @can_manage_users ? 'Yes' : 'No' %>
                </span>
              </div>
              <div class="flex flex-col sm:flex-row sm:justify-between">
                <span class="text-gray-600 text-sm sm:text-base">Can Approve:</span>
                <span class="font-medium text-sm sm:text-base <%= @can_approve ? 'text-green-600' : 'text-red-600' %>">
                  <%= @can_approve ? 'Yes' : 'No' %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
