            <div class="w-8 h-8 bg-red-600 rounded-full flex items-center justify-center">
              <span class="text-white font-semibold text-sm">A</span>
            </div>
            <div class="hidden md:block">
              <p class="text-sm font-medium text-gray-900">Admin User</p>
              <p class="text-xs text-gray-500">admin@example.com</p>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content Area -->
    <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
      <div class="max-w-7xl mx-auto">
        <!-- Header Section -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
          <div class="text-center">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Purchase Order Workflow</h2>
            <p class="text-gray-600">Complete 9-step process for procurement from initial request to final payment</p>
          </div>
        </div>
        
        <!-- Workflow Steps -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Step 1: Purchase Request -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-blue-500">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center font-bold mr-3">1</div>
              <h3 class="text-lg font-semibold text-gray-900">Purchase Request</h3>
            </div>
            <div class="space-y-2 text-sm text-gray-600">
              <p><strong>Initiator:</strong> Employee identifies need</p>
              <p><strong>Action:</strong> Fill out MRS and PRF forms</p>
              <p><strong>Required:</strong> Item details, vendor info, cost estimates</p>
            </div>
            <button class="mt-4 w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition-colors">
              <a href="<%= purchase_request_path %>" class="block w-full h-full">Start Request</a>
            </button>
          </div>

          <!-- Step 2: Engineering Budget Approval -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-yellow-500">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-yellow-500 text-white rounded-full flex items-center justify-center font-bold mr-3">2</div>
              <h3 class="text-lg font-semibold text-gray-900">Budget Approval</h3>
            </div>
            <div class="space-y-2 text-sm text-gray-600">
              <p><strong>Reviewer:</strong> Manager</p>
              <p><strong>Check:</strong> Budget availability</p>
              <p><strong>Outcome:</strong> Approve/Revise/Reject</p>
            </div>
            <button class="mt-4 w-full bg-yellow-500 text-white py-2 px-4 rounded-md hover:bg-yellow-600 transition-colors">
              Review Requests
            </button>
          </div>

          <!-- Step 3: Procurement Review -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-green-500">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center font-bold mr-3">3</div>
              <h3 class="text-lg font-semibold text-gray-900">Procurement Review</h3>
            </div>
            <div class="space-y-2 text-sm text-gray-600">
              <p><strong>Team:</strong> Procurement/Purchasing</p>
              <p><strong>Tasks:</strong> Vendor selection, price comparison</p>
              <p><strong>Check:</strong> Compliance requirements</p>
            </div>
            <button class="mt-4 w-full bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 transition-colors">
              Review Procurement
            </button>
          </div>

          <!-- Step 4: Create Purchase Order -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-purple-500">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-purple-500 text-white rounded-full flex items-center justify-center font-bold mr-3">4</div>
              <h3 class="text-lg font-semibold text-gray-900">Create PO</h3>
            </div>
            <div class="space-y-2 text-sm text-gray-600">
              <p><strong>Action:</strong> Generate formal PO</p>
              <p><strong>Contents:</strong> PO number, vendor details, items</p>
              <p><strong>Software:</strong> Procurement system</p>
            </div>
            <button class="mt-4 w-full bg-purple-500 text-white py-2 px-4 rounded-md hover:bg-purple-600 transition-colors">
              Create PO
            </button>
          </div>

          <!-- Step 5: PO Approval -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-indigo-500">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-indigo-500 text-white rounded-full flex items-center justify-center font-bold mr-3">5</div>
              <h3 class="text-lg font-semibold text-gray-900">PO Approval</h3>
            </div>
            <div class="space-y-2 text-sm text-gray-600">
              <p><strong>Reviewer:</strong> Finance/Upper Management</p>
              <p><strong>Policy:</strong> Company approval levels</p>
              <p><strong>Status:</strong> Pending approval</p>
            </div>
            <button class="mt-4 w-full bg-indigo-500 text-white py-2 px-4 rounded-md hover:bg-indigo-600 transition-colors">
              Approve PO
            </button>
          </div>

          <!-- Step 6: Send PO to Vendor -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-pink-500">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-pink-500 text-white rounded-full flex items-center justify-center font-bold mr-3">6</div>
              <h3 class="text-lg font-semibold text-gray-900">Send to Vendor</h3>
            </div>
            <div class="space-y-2 text-sm text-gray-600">
              <p><strong>Method:</strong> Email</p>
              <p><strong>Status:</strong> Awaiting confirmation</p>
              <p><strong>Next:</strong> Vendor acceptance</p>
            </div>
            <button class="mt-4 w-full bg-pink-500 text-white py-2 px-4 rounded-md hover:bg-pink-600 transition-colors">
              Send PO
            </button>
          </div>

          <!-- Step 7: Receive Goods/Services -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-teal-500">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-teal-500 text-white rounded-full flex items-center justify-center font-bold mr-3">7</div>
              <h3 class="text-lg font-semibold text-gray-900">Receive Goods</h3>
            </div>
            <div class="space-y-2 text-sm text-gray-600">
              <p><strong>Team:</strong> Receiving team</p>
              <p><strong>Verify:</strong> Items match PO</p>
              <p><strong>Documents:</strong> Delivery note, inspection</p>
            </div>
            <button class="mt-4 w-full bg-teal-500 text-white py-2 px-4 rounded-md hover:bg-teal-600 transition-colors">
              Record Receipt
            </button>
          </div>

          <!-- Step 8: Invoice Matching -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-orange-500">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-orange-500 text-white rounded-full flex items-center justify-center font-bold mr-3">8</div>
              <h3 class="text-lg font-semibold text-gray-900">Invoice Matching</h3>
            </div>
            <div class="space-y-2 text-sm text-gray-600">
              <p><strong>Team:</strong> Accounts Payable</p>
              <p><strong>Match:</strong> PO, Delivery, Invoice</p>
              <p><strong>Status:</strong> Verification in progress</p>
            </div>
            <button class="mt-4 w-full bg-orange-500 text-white py-2 px-4 rounded-md hover:bg-orange-600 transition-colors">
              Match Documents
            </button>
          </div>

          <!-- Step 9: Payment Processing -->
          <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-red-500">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-red-500 text-white rounded-full flex items-center justify-center font-bold mr-3">9</div>
              <h3 class="text-lg font-semibold text-gray-900">Payment Processing</h3>
            </div>
            <div class="space-y-2 text-sm text-gray-600">
              <p><strong>Method:</strong> Bank transfer, cash, check</p>
              <p><strong>Terms:</strong> As agreed</p>
              <p><strong>Tax:</strong> Withholding Tax (2303)</p>
            </div>
            <button class="mt-4 w-full bg-red-500 text-white py-2 px-4 rounded-md hover:bg-red-600 transition-colors">
              Process Payment
            </button>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<!-- Tooltip for collapsed sidebar -->
<div id="tooltip" class="fixed bg-gray-800 text-white text-sm px-2 py-1 rounded shadow-lg opacity-0 pointer-events-none transition-opacity duration-200 z-50"></div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sidebar = document.getElementById('sidebar');
  const sidebarToggle = document.getElementById('sidebar-toggle');
  const mobileSidebarToggle = document.getElementById('mobile-sidebar-toggle');
  const sidebarTexts = document.querySelectorAll('.sidebar-text');
  const tooltip = document.getElementById('tooltip');
  
  // Toggle sidebar
  function toggleSidebar() {
    sidebar.classList.toggle('w-64');
    sidebar.classList.toggle('w-16');
    
    sidebarTexts.forEach(text => {
      text.classList.toggle('hidden');
    });
    
    // Update toggle button icon
    const icon = sidebarToggle.querySelector('svg');
    if (sidebar.classList.contains('w-16')) {
      icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>';
    } else {
      icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>';
    }
  }
  
  // Mobile sidebar toggle
  function toggleMobileSidebar() {
    sidebar.classList.toggle('hidden');
  }
  
  // Tooltip functionality for collapsed sidebar
  function showTooltip(event, text) {
    if (sidebar.classList.contains('w-16')) {
      tooltip.textContent = text;
      tooltip.style.left = event.pageX + 10 + 'px';
      tooltip.style.top = event.pageY - 10 + 'px';
      tooltip.classList.remove('opacity-0');
    }
  }
  
  function hideTooltip() {
    tooltip.classList.add('opacity-0');
  }
  
  // Event listeners
  sidebarToggle.addEventListener('click', toggleSidebar);
  mobileSidebarToggle.addEventListener('click', toggleMobileSidebar);
  
  // Add tooltip events to sidebar items
  const sidebarItems = document.querySelectorAll('#sidebar a, #sidebar button');
  sidebarItems.forEach(item => {
    const text = item.querySelector('.sidebar-text')?.textContent;
    if (text) {
      item.addEventListener('mouseenter', (e) => showTooltip(e, text));
      item.addEventListener('mouseleave', hideTooltip);
    }
  });
});
</script>
