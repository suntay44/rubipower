<!-- Main Content -->
    <!-- Top Navigation -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="flex items-center justify-between px-6 py-4">
        <div class="flex items-center space-x-4">
          <a href="<%= expense_report_path(@cash_advance_request) %>" class="text-gray-500 hover:text-gray-700">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          </a>
          <div class="flex items-center space-x-3">
            <h1 class="text-2xl font-bold text-gray-900">Edit Expense Report</h1>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content Area -->
    <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
      <div class="max-w-4xl mx-auto">
        <!-- Header Section -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
          <div class="text-center">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Edit Expense Report</h2>
            <p class="text-gray-600">Update your expense report information below</p>
          </div>
        </div>
        
        <!-- Expense Report Form -->
        <%= form_with model: @expense_report, url: expense_report_path(@expense_report), method: :patch, local: true, class: "bg-white rounded-lg shadow-sm p-6" do |form| %>
          <!-- Error Messages -->
          <% if @expense_report.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    There were <%= pluralize(@expense_report.errors.count, "error") %> with your submission:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @expense_report.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Cash Advance Request Info -->
          <div class="mb-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Cash Advance Request Details</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Employee Name</label>
                <div class="text-sm text-gray-900"><%= @cash_advance_request.employee_name %></div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Amount Requested</label>
                <div class="text-sm text-gray-900">â‚±<%= number_with_precision(@cash_advance_request.amount_requested, precision: 2) %></div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Purpose</label>
                <div class="text-sm text-gray-900"><%= @cash_advance_request.purpose_of_advance %></div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Required Date</label>
                <div class="text-sm text-gray-900"><%= @cash_advance_request.required_date.strftime("%b %d, %Y") %></div>
              </div>
            </div>
          </div>

          <!-- Expense Report Fields -->
          <div class="space-y-8">
            <!-- Explanation -->
            <div>
              <%= form.label :explanation, "Explanation of Actual Expenses *", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_area :explanation, rows: 4, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <!-- Unused Cash -->
            <div>
              <%= form.label :unused_cash, "Unused Cash Returned (â‚±) *", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :unused_cash, step: 0.01, min: 0, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <!-- Existing Receipts -->
            <% if @expense_report.receipts.attached? %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Current Receipts</label>
                <div class="space-y-2">
                  <% @expense_report.receipts.each do |receipt| %>
                    <div class="flex items-center justify-between p-2 bg-blue-50 rounded border">
                      <div class="flex items-center space-x-2">
                        <span class="text-blue-600">ðŸ“Ž</span>
                        <span class="text-sm text-gray-700"><%= receipt.filename %></span>
                        <span class="text-xs text-gray-500">(<%= number_to_human_size(receipt.byte_size) %>)</span>
                      </div>
                      <div class="flex items-center space-x-2">
                        <%= link_to "Download", rails_blob_path(receipt, disposition: "attachment"), class: "text-xs text-blue-600 hover:text-blue-800" %>
                        <button type="button" onclick="deleteAttachment(<%= receipt.blob_id %>)" 
                                class="text-xs text-red-600 hover:text-red-800 bg-transparent border-none cursor-pointer">
                          Delete
                        </button>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- New Receipts Upload -->
            <div>
              <%= form.label :receipts, "Add More Receipts", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.file_field :receipts, multiple: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
              <p class="mt-1 text-sm text-gray-500">Upload additional receipts. You can select multiple files.</p>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="mt-8 flex justify-end">
            <%= form.submit "Update Expense Report", class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors duration-200" %>
          </div>
        <% end %>
      </div>
    </main>

    <!-- Sidebar Script -->
    <%= render 'shared/sidebar_script' %>

<script>
  function deleteAttachment(blobId) {
    if (confirm('Are you sure you want to delete this attachment?')) {
      fetch(`/expense-report/<%= @expense_report.id %>/delete-attachment/${blobId}`, {
        method: 'DELETE',
        headers: {
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
          'Content-Type': 'application/json'
        }
      })
      .then(response => {
        if (response.ok) {
          location.reload();
        } else {
          alert('Error deleting attachment');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error deleting attachment');
      });
    }
  }
  
  // Make deleteAttachment globally available
  window.deleteAttachment = deleteAttachment;
</script>

